<?xml version="1.0" encoding="UTF-8"?>
<site>

<!-- ******************************* Включение для разделов каталога ****************************** -->

<include-definition name="COMMON_AND_LINKS">
	<variables>
		<var name="isq" scope="cookie"/>
		<var name="isq1" scope="cookie"/>
		<var name="isq2" scope="cookie"/>
	</variables>
	<link name="index_link" target="index"/>
	<link name="about_link" target="about"/>
	<link name="catalog_link" target="catalog"/>
	<link name="buy_link" target="buy"/>
	<link name="reference_link" target="reference"/>
	<link name="contacts_link" target="contacts"/>
	<link name="news_link" target="news"/>
	<link name="search_link" target="search"/>
	<link name="google_search_link" target="search_google"/>
	<link name="cart_ajax_link" target="cart_ajax"/>
	<link name="cart_link" target="cart"/>
	<link name="compare_link" target="compare"/>
	<link name="global_search_link" target="search"/>
	<link name="lost_password_link" target="lost_password"/>
	<session>
		<item name="compare" tag="user_compare">
			<item name="product_comp" tag="product"/>
		</item>
		<item name="cart" tag="user_cart">
			<item name="bought">
				<item name="product" tag="product"/>
			</item>
		</item>
	</session>
	<item name="common" cacheable="true"/>
	<item name="catalog" tag="catalog_menu" id="menu" cacheable="true">
		<item name="section" id="s_1" tag="section">
			<link name="show_section" target="section">
				<var name="selected_section" item="s_1" parameter="code"/>
			</link>
			<link name="show_subsections" target="subsections">
				<var name="selected_section" item="s_1" parameter="code"/>
			</link>
			<item name="section" id="s_2">
				<link name="show_section" target="section">
					<var name="selected_section" item="s_2" parameter="code"/>
				</link>
				<link name="show_subsections" target="subsections">
					<var name="selected_section" item="s_2" parameter="code"/>
				</link>
				<item name="section" id="s_3">
					<link name="show_section" target="section">
						<var name="selected_section" item="s_3" parameter="code"/>
					</link>
					<link name="show_subsections" target="subsections">
						<var name="selected_section" item="s_3" parameter="code"/>
					</link>
					<item name="section" id="s_4">
						<link name="show_section" target="section">
							<var name="selected_section" item="s_4" parameter="code"/>
						</link>
						<link name="show_subsections" target="subsections">
							<var name="selected_section" item="s_4" parameter="code"/>
						</link>
					</item>
				</item>
			</item>
		</item>
	</item>
	<item name="news_item" id="main_news" cacheable="true">
		<link name="show_news_item" target="news_item">
			<var name="selected_news_item" item="main_news" style="translit"/>
		</link>
		<filter>
			<sorting direction="DESC"><var value="date"/></sorting>
			<limit><var value="3"/></limit>
		</filter>
	</item>
	<link name="show_only_in_store" target-var="$pagename" copy-page-vars="yes">
		<var name="isq" value="0" style="query"/>
	</link>
	<link name="show_not_only_in_store" target-var="$pagename" copy-page-vars="yes">
		<var name="isq" value="" style="query"/>
	</link>
	<link name="show_only_in_store1" target-var="$pagename" copy-page-vars="yes">
		<var name="isq1" value="0" style="query"/>
		<var name="isq2" value="" style="query"/>
	</link>
	<link name="show_not_only_in_store1" target-var="$pagename" copy-page-vars="yes">
		<var name="isq1" value="" style="query"/>
	</link>
	<link name="show_only_in_store2" target-var="$pagename" copy-page-vars="yes">
		<var name="isq2" value="0" style="query"/>
		<var name="isq1" value="" style="query"/>
	</link>
	<link name="show_not_only_in_store2" target-var="$pagename" copy-page-vars="yes">
		<var name="isq2" value="" style="query"/>
	</link>
</include-definition>



<!-- ******************************* Главная страница ****************************** -->

<page name="index" template="index">
	<include name="COMMON_AND_LINKS"/>
	<item name="product" id="hit" tag="hit" cacheable="true">
		<filter>
			<parameter name="hit" sign="=" compare="SOME"><var value="1"/></parameter>
		</filter>
		<link name="show_product" target="product">
			<var name="selected_product" item="hit" parameter="code"/>
		</link>
		<link name="to_cart" target="cart_action">
			<var name="action" value="ajax"/>
			<var name="product" item="hit"/>
		</link>
		<link name="to_compare" target="compare_action">
			<var name="action" value="add"/>
			<var name="product" item="hit"/>
		</link>
		<parent-of name="section"/>
	</item>
	<item name="product" id="new" tag="new" cacheable="true">
		<filter>
			<parameter name="new" sign="=" compare="SOME"><var value="1"/></parameter>
		</filter>
		<link name="show_product" target="product">
			<var name="selected_product" item="new" parameter="code"/>
		</link>
		<link name="to_cart" target="cart_action">
			<var name="action" value="ajax"/>
			<var name="product" item="new"/>
		</link>
		<link name="to_compare" target="compare_action">
			<var name="action" value="add"/>
			<var name="product" item="new"/>
		</link>
		<parent-of name="section"/>
	</item>
</page>


<!-- ******************************* Каталог продукции ****************************** -->

<page name="catalog" template="catalog">
	<include name="COMMON_AND_LINKS"/>
</page>


<!-- ******************************* Раздел (подразделы) ****************************** -->

<page name="subsections" template="catalog">
	<variables>
		<var name="selected_section"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
	<item name="section" quantifier="single" id="selected_section" reference-var="selected_section" reference-parameter="code" tag="selected_section"/>
</page>


<!-- ******************************* Раздел (товары) ****************************** -->

<page name="section" template="section">
	<variables>
		<var name="selected_section"/>
		<var name="page" value="1"/>
		<var name="limit" value="24" scope="cookie"/>
		<var name="sorting" value="name"/>
		<var name="query" value=""/>
		<var name="filter_var"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
	<item name="section" quantifier="single" id="selected_section" tag="selected_section" reference-var="selected_section" reference-parameter="code" cache-vars="selected_section">
		<successor name="product" id="product" tag="product">
			<filter item="selected_section" parameter="product_filter" var="filter_var" preload-domains="yes">
				<fulltext name="search" limit="100"><var var="query"/></fulltext>
				<parameter name="qty" sign="&gt;"><var var="isq"/></parameter>
				<parameter name="qty1" sign="&gt;"><var var="isq1"/></parameter>
				<parameter name="qty2" sign="&gt;"><var var="isq2"/></parameter>
				<limit><var var="limit"/></limit>
				<sorting direction="ASC"><var var="sorting"/></sorting>
				<pages><var name="page" var="page"/></pages>
				<link name="base_filter_link" target="section">
					<var name="selected_section" var="selected_section"/>
					<var name="limit" var="limit" style="query"/>
					<var name="sorting" var="sorting" style="query"/>
					<var name="query" var="query" style="query"/>
					<var name="page" value="1" style="query"/>
				</link>
			</filter>
			<link name="show_product" target="product">
				<var name="selected_product" item="product" parameter="code"/>
			</link>
			<link name="to_cart" target="cart_action">
				<var name="action" value="ajax"/>
				<var name="product" item="product"/>
			</link>
			<link name="to_compare" target="compare_action">
				<var name="action" value="add"/>
				<var name="product" item="product"/>
			</link>
			<link name="analog_ajax_link" target="analog_ajax">
				<var name="code" item="product" parameter="code"/>
			</link>
			<parent-of name="section" tag="sec"/>
		</successor>
	</item>
	<link name="base_limit_link" target="section">
		<var name="selected_section" var="selected_section"/>
		<var name="filter_var" var="filter_var" style="query"/>
		<var name="sorting" var="sorting" style="query"/>
		<var name="query" var="query" style="query"/>
		<var name="page" value="1" style="query"/>
		<var name="limit" value="*lim*" style="query"/>
	</link>
	<link name="base_sorting_link" target="section">
		<var name="selected_section" var="selected_section"/>
		<var name="filter_var" var="filter_var" style="query"/>
		<var name="page" value="1" style="query"/>
		<var name="limit" var="limit" style="query"/>
		<var name="query" var="query" style="query"/>
		<var name="sorting" value="*sort*" style="query"/>
	</link>
	<link name="base_search_link" target="section">
		<var name="selected_section" var="selected_section"/>
		<var name="filter_var" var="filter_var" style="query"/>
		<var name="page" value="1" style="query"/>
		<var name="limit" var="limit" style="query"/>
		<var name="sorting" var="sorting" style="query"/>
	</link>
</page>

<page name="analog_ajax" template="analog_ajax">
	<variables>
		<var name="code"/>
	</variables>
	<item name="product" id="src" tag="src" reference-var="code" reference-parameter="code"/>
	<item name="product" id="product" tag="product">
		<filter>
			<parameter name="code" sign="="><var item="src" parameter="analog_code"/></parameter>
		</filter>
		<link name="show_product" target="product">
			<var name="selected_product" item="product" parameter="code"/>
		</link>
	</item>
</page>


<!-- ******************************* Поиск ****************************** -->

<page name="search" template="section">
	<variables>
		<var name="query"/>
		<var name="sec"/>
		<var name="search" value="strict"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
	<item name="catalog" tag="selected_section">
		<successor name="product" id="product" tag="product">
			<filter>
				<parameter name="qty" sign="&gt;"><var var="isq"/></parameter>
				<parameter name="qty1" sign="&gt;"><var var="isq1"/></parameter>
				<parameter name="qty2" sign="&gt;"><var var="isq2"/></parameter>
				<fulltext limit="100" type="ecommander.extra.BelchipTermFulltextQuery ecommander.extra.StrictBelchipFulltextQuery" compare="SOME">
					<var var="query"/>
				</fulltext>
			</filter>
			<link name="show_product" target="product">
				<var name="selected_product" item="product" parameter="code"/>
			</link>
			<link name="to_cart" target="cart_action">
				<var name="action" value="ajax"/>
				<var name="product" item="product"/>
			</link>
			<link name="to_compare" target="compare_action">
				<var name="action" value="add"/>
				<var name="product" item="product"/>
			</link>
			<link name="analog_ajax_link" target="analog_ajax">
				<var name="code" item="product" parameter="code"/>
			</link>
			<parent-of name="section" id="prod_sec" tag="sec">
				<link name="show_sec" target="search">
					<var name="query" var="query"/>
					<var name="sec" item="prod_sec" parameter="code"/>
				</link>
			</parent-of>
		</successor>
	</item>
	<link name="base_search_link" target="search"/>
	<link name="fuzzy_search_link" target="search_fuzzy">
		<var name="query" var="query"/>
	</link>
</page>

<page name="search_fuzzy" template="section">
	<variables>
		<var name="query"/>
		<var name="sec"/>
		<var name="search" value="fuzzy"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
	<item name="catalog" tag="selected_section">
		<successor name="product" id="product" tag="product">
			<filter>
				<parameter name="qty" sign="&gt;"><var var="isq"/></parameter>
				<parameter name="qty1" sign="&gt;"><var var="isq1"/></parameter>
				<parameter name="qty2" sign="&gt;"><var var="isq2"/></parameter>
				<fulltext limit="100" threshold="0.4" type="ecommander.extra.FuzzyBelchipFulltextQuery" compare="SOME">
					<var var="query"/>
				</fulltext>
			</filter>
			<link name="show_product" target="product">
				<var name="selected_product" item="product" parameter="code"/>
			</link>
			<link name="analog_ajax_link" target="analog_ajax">
				<var name="code" item="product" parameter="code"/>
			</link>
			<link name="to_cart" target="cart_action">
				<var name="action" value="ajax"/>
				<var name="product" item="product"/>
			</link>
			<link name="to_compare" target="compare_action">
				<var name="action" value="add"/>
				<var name="product" item="product"/>
			</link>
			<parent-of name="section" id="prod_sec" tag="sec">
				<link name="show_sec" target="search_fuzzy">
					<var name="query" var="query"/>
					<var name="sec" item="prod_sec" parameter="code"/>
				</link>
			</parent-of>
		</successor>
	</item>
	<link name="base_search_link" target="search_fuzzy"/>
</page>

<page name="search_google" template="search_google">
	<variables>
		<var name="query"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
</page>

<page name="no" template="section">
