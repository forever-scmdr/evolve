	<headers Content-Type="application/xml;charset=utf-8"/>
	<variables>
		<var name="action" value="post_jur"/>
		<var name="order_num"/>
		<var name="url_base" value="http://belchip.by"/>
	</variables>
	<session>
		<item name="cart_contacts"/>
		<item name="cart" id="cart">
			<item name="bought" id="bought">
				<item name="product" id="product" tag="product"/>
			</item>
			<item name="custom_bought"/>
		</item>
	</session>
</page>

<!-- ******************************* Корзина ajax ****************************** -->

<page name="cart_ajax" template="cart_ajax">
	<variables>
		<var name="cart_cookie" scope="cookie"/>
	</variables>
	<headers Cache-Control="no-cache" Expires="-1"/>
	<command class="ecommander.extra.CartManageCommand" method="restoreFromCookie"/>
	<session>
		<item name="cart">
			<item name="bought">
				<item name="product" id="product">
					<link name="to_cart" target="cart_action">
						<var name="action" value="ajax"/>
						<var name="product" item="product"/>
					</link>				
				</item>
			</item>
		</item>
	</session>
	<link name="show_cart" target="cart"/>
</page>

<!-- ******************************* Корзина заказов ****************************** -->

<page name="cart" template="cart">
	<variables>
		<var name="method" value="restoreFromCookie"/>
		<var name="cart_cookie" scope="cookie"/>
	</variables>
	<command class="ecommander.extra.CartManageCommand" method-var="method"/>
	<command class="ecommander.extra.CartManageCommand" method="createOrLoadCart"/>
	<include name="COMMON_AND_LINKS"/>
	<session>
		<item name="cart" id="cart">
			<item name="bought" id="bought">
				<item name="product" id="product" tag="product">
					<link name="show_product" target="product">
						<var name="selected_product" item="product" parameter="code"/>
					</link>
				</item>
				<link name="delete" target="cart_action">
					<var name="action" value="delete"/>
					<var name="product" item="bought"/>
				</link>
				<input name="new_quantity" item="bought"/>
			</item>
			<item name="custom_bought" id="custom_bought">
				<input name="new_mark" item="custom_bought"/>
				<input name="new_type" item="custom_bought"/>
				<input name="new_case" item="custom_bought"/>
				<input name="new_qty" item="custom_bought"/>
				<input name="new_link" item="custom_bought"/>
				<input name="new_extra" item="custom_bought"/>
			</item>
		</item>
	</session>
	<item name="product" reference-item="product" tag="ref">
		<parent-of name="section" tag="section"/>
	</item>
	<link name="recalculate_link" target="cart_action" type="itemvars">
		<var name="action" value="recalculate"/>
	</link>
	<link name="proceed_link" target="cart_action" type="itemvars">
		<var name="action" value="proceed"/>
	</link>
</page>

<!-- ******************************* Форма отправки корзины ****************************** -->

<page name="cart_thanks" template="cart_thanks">
	<variables>
		<var name="method" value="postProcessCart"/>
	</variables>
	<include name="COMMON_AND_LINKS"/>
	<session>
		<item name="cart_contacts"/>
		<item name="cart">
			<item name="bought">
				<item name="product" tag="product"/>
			</item>
			<item name="custom_bought"/>
		</item>
	</session>
	<command class="ecommander.extra.CartManageCommand" method-var="method"/>
</page>

<!-- ******************************* Сравнение ****************************** -->

<page name="compare" template="compare">
	<include name="COMMON_AND_LINKS"/>
	<session>
		<item name="compare" id="compare">
			<item name="product_comp" id="product" tag="product">
				<link name="to_cart" target="cart_action">
					<var name="action" value="ajax"/>
					<var name="product" item="product"/>
				</link>
				<link name="show_product" target="product">
					<var name="selected_product" item="product" parameter="code"/>
				</link>
				<link name="delete" target="compare_action">
					<var name="action" value="delete"/>
					<var name="product" item="product"/>
				</link>
				<usergroup name="common">
					<parent-of name="section" tag="sec"/>
				</usergroup>
			</item>
		</item>
	</session>
</page>

<!-- ******************************** Действие для управления сравнением ****************************** -->

<page name="compare_action">
	<variables>
		<var name="action"/>
		<var name="product"/>
	</variables>
	<link name="ajax" target="compare_ajax"/>
	<link name="compare" target="compare"/>
	<command class="ecommander.extra.CompareManageCommand">
		<result name="ajax" type="redirect"/>
		<result name="compare" type="redirect"/>
	</command>
</page>

<!-- ******************************* Контактные данные ****************************** -->

<page name="proceed" template="proceed">
