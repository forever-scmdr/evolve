<?xml version="1.0" encoding="UTF-8"?>
<site>

<!-- ******************************* Включение для разделов каталога ****************************** -->

	<page name="index">
		<request>
			<var name="min" value="4"/>
		</request>
		<single item="catalog">
			<list item="section" tag="by_child">
				<filter>
					<child item="product">
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					</child>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
				<list item="product" transit="true">
					<filter>
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					</filter>
				</list>
			</list>
		</single>
	</page>


	<page name="nested_child_assoc">
		<request>
			<var name="min" value="4"/>
			<var name="page" value="3"/>
		</request>
		<single item="catalog">
			<list item="section" tag="by_child">
				<filter>
					<child item="section">
						<child item="product">
							<parameter name="price" sign="&gt;="><var var="min"/></parameter>
							<parameter name="price" sign="&lt;="><var value="5"/></parameter>
						</child>
						<parameter name="name" sign="like"><var value="К%"/></parameter>
					</child>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
			</list>
		</single>
	</page>


	<page name="parent_assoc">
		<request>
			<var name="min" value="4"/>
			<var name="page" value="10"/>
		</request>
		<single item="catalog">
			<list item="product" tag="by_parent" transit="true">
				<filter>
					<parent item="section">
						<parameter name="name" sign="like"><var value="К%"/></parameter>
					</parent>
					<parameter name="price" sign="&gt;="><var var="min"/></parameter>
					<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					<sorting><var value="name"/></sorting>
					<limit><var value="10"/></limit>
					<pages><var name="page" var="page" /></pages>
				</filter>
				<ancestor item="section" tag="parent" transit="true"/>
			</list>
		</single>
	</page>


	<page name="limit">
		<request>
			<var name="min" value="4"/>
			<var name="page" value="1"/>
		</request>
		<single item="catalog">
			<list item="section">
				<filter>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
				<list item="product" transit="true">
					<filter>
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
						<limit><var value="10"/></limit>
						<pages><var name="page" var="page"/></pages>
					</filter>
				</list>
			</list>
		</single>
	</page>


	<page name="option">
		<request>
			<var name="min" value="4"/>
			<var name="page" value="1"/>
		</request>
		<single item="catalog">
			<list item="section">
				<filter>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
				<list item="product" transit="true">
					<filter>
						<option>
							<parameter name="price" sign="="><var value="5"/></parameter>
						</option>
						<option>
							<parent item="section">
								<parameter name="name" sign="like"><var value="Ка%"/></parameter>
							</parent>
						</option>
					</filter>
					<ancestor item="section" tag="parent" transit="true"/>
				</list>
			</list>
		</single>
	</page>


	<page name="group">
		<request>
			<var name="min" value="4"/>
			<var name="page" value="10"/>
		</request>
		<single item="catalog">
			<list item="section" tag="main_sec">
				<filter>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
				<list item="product" transit="true" tag="min">
					<aggregation function="MIN" parameter="price">
						<parameter name="country" sort="DESC"/>
						<parameter name="producer" sort="DESC"/>
					</aggregation>
					<filter>
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					</filter>
				</list>
				<list item="product" transit="true" tag="max">
					<aggregation function="MAX" parameter="price">
						<parameter name="country" sort="DESC"/>
						<parameter name="producer" sort="DESC"/>
					</aggregation>
					<filter>
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					</filter>
				</list>
				<list item="product" transit="true" tag="count">
					<aggregation function="COUNT" parameter="price">
						<parameter name="country" sort="DESC"/>
						<parameter name="producer" sort="DESC"/>
					</aggregation>
					<filter>
						<parameter name="price" sign="&gt;="><var var="min"/></parameter>
						<parameter name="price" sign="&lt;="><var value="5"/></parameter>
					</filter>
				</list>
			</list>
		</single>
	</page>


	<page name="new">
		<single item="catalog">
			<list item="section" id="section">
				<filter>
					<parameter name="name" sign="like"><var value="К%"/></parameter>
				</filter>
				<parameter-input ref="section" name="code" restore-var="message" form="big_form"/>
				<new item="section" parent-ref="section" id="new_section" tag="new">
					<parameter-input ref="new_section" restore-var="message" form="big_form"/>
					<extra-input ref="new_section" name="popular" restore-var="message" form="big_form"/>
					<new item="product" parent-ref="new_section" id="new_product">
						<parameter-input ref="new_product" restore-var="message" form="big_form"/>
						<extra-input ref="new_product" name="popular" restore-var="message" form="big_form"/>
					</new>
				</new>
			</list>
		</single>
	</page>


	<page name="assoc_basic">
		<list item="section_first">
			<filter>
				<parameter name="name" sign="like"><var value="Ш%"/></parameter>
			</filter>
			<list item="section" assoc="anti" tag="section_anti"/>
			<list item="section" assoc="go_with" tag="section_go_with"/>
			<list item="product" transit="true" assoc="anti" tag="all_anti"/>
			<list item="product" transit="true" assoc="go_with" tag="all_go_with"/>
			<list item="product" transit="true" assoc="anti" tag="anti_less_3">
				<filter>
					<parameter name="price" sign="&lt;="><var value="3"/></parameter>
				</filter>
			</list>
		</list>
	</page>


	<page name="reference_translit">
		<request>
			<var name="sec" style="translit"/>
		</request>
		<single item="section" var="sec"/>
	</page>


	<page name="reference_id">
		<request>
			<var name="sec"/>
		</request>
		<single item="section" var="sec"/>
	</page>


	<page name="reference_param">
		<request>
			<var name="sec"/>
		</request>
		<single item="product" var="sec" parameter="code"/>
	</page>


	<page name="user_group">
		<request>
			<var name="name" value="Шнуры"/>
		</request>
		<usergroup name="registered">
			<single item="section_first" var="name" parameter="name">
				<list item="section">
					<filter>
						<child item="product">
							<parameter name="price" sign="&gt;="><var value="10"/></parameter>
						</child>
					</filter>
					<list item="product" transit="true">
						<filter>
							<parameter name="price" sign="&gt;="><var value="10"/></parameter>
						</filter>
					</list>
				</list>
			</single>
		</usergroup>
	</page>


	<page name="user_personal">
		<request>
			<var name="name" value="Шнуры"/>
		</request>
		<single item="section_first" var="name" parameter="name">
			<personal>
				<list item="section">
					<filter>
						<child item="product">
							<parameter name="price" sign="&gt;="><var value="10"/></parameter>
						</child>
					</filter>
					<list item="product" transit="true">
						<filter>
							<parameter name="price" sign="&gt;="><var value="10"/></parameter>
						</filter>
					</list>
				</list>
			</personal>
		</single>
	</page>


	<page name="key_unique_default">
		<request>
			<var name="sec" style="translit"/>
		</request>
		<single item="section" var="sec"/>
	</page>

	<page name="critical_item" critical-item="sec">
		<request>
			<var name="code"/>
		</request>
		<single item="section" var="code" parameter="code" id="sec"/>
	</page>


	<page name="search_basic">
		<request>
			<var name="q" value="напряжение"/>
		</request>
		<list item="product">
			<filter>
				<fulltext name="name" limit="100"><var var="q"/></fulltext>
			</filter>
		</list>
	</page>

	<page name="search_multiple">
		<request>
			<var name="q" value="напряжение"/>
		</request>
		<list item="product">
			<filter>
				<fulltext limit="50"><var var="q"/></fulltext>
			</filter>
		</list>
	</page>

	<page name="integration" template="integration">
		<request>
			<var name="action"/>
		</request>
		<command class="extra.Integrate_2" clear-cache="yes">
			<result name="success" type="xml"></result>
		</command>
	</page>
</site>