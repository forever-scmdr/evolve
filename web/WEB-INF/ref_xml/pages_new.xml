<?xml version="1.0" encoding="UTF-8"?>
<site>

	<admin-page group="seller">
		<personal>
			<single item="seller" id="item"/><!-- Боковой список айтемов (сабайтемы) - id="subitems" -->
		</personal>
	</admin-page>

	<admin-page group="common" item="product">
		<single item="product" id="item"><!-- Айтем, который редактируется (базовый) - id="item" -->
			<single item="gallery">
				<list item="picture_pair"/>
			</single>
			<ancestor item="section" id="parsedItem" transit="false">
				<list item="product" id="subitems"/><!-- Боковой список айтемов (сабайтемы) - id="subitems" -->
			</ancestor>
		</single>
	</admin-page>

	<page name="index_new" template="index_new">
		<!-- Загрузить одиночный айтем (когда точно известно, что айтем может быть только один) -->
		<single item="catalog">
			<!--
			Загрузить вложеные айтемы (с ассоциацией hierarchy) в виде одного массива,
			а затем выстроить результат в виде дерева.
			Для дерева по умолчанию предполагается, что атрибут transit неявно задан true.

			Ссылка на элемент, имеющий атрибут id всегда обозначается атрибутом ref (в частности в переменных link)
			Ссылка же на другую переменную обозначается атрибутом var
			  -->
			<tree item="section_abstract" assoc="hierarchy" id="section">
				<link name="show_section" target="section">
					<var name="sec" ref="section" style="translit" />
				</link>
			</tree>
		</single>

	</page>


	<page name="section" template="section">
		<request>
			<var name="sec" style="translit"/>
		</request>
		<!--Ссылка на переменную в атрибутах любых тэгов обозначается как атрибут var-->
		<single item="section_abstract" var="sec" tag="current_section">
			<!-- Загрузить всех потомков (прямых и непрямых) айтема в виде одного списка -->
			<list item="product" assoc="hierarchy" transit="true" id="product">
				<!-- Блок инпутов, которые относястя к айтему ref. Названия инпутов перечисляются в тэге name -->
				<!-- Эти параметры не являются параметрами айтема -->
				<extra-input ref="product" name="qty compare"/>
				<link name="show_product" target="product">
					<var name="prod" ref="product" style="translit"/>
				</link>
			</list>
			<!-- Загрузить всех предшественников (transit="true") по определенной ассоциации -->
			<ancestor item="section_abstract" assoc="hierarchy" transit="true" tag="breadcrumb"/>
			<!-- Загрузить всех прямых потомков айтема (по умолчанию transit="false") -->
			<list item="section_abstract" assoc="hierarchy" tag="subsection"/>
		</single>
	</page>

	<page name="discount" template="section">
		<request>
			<var name="sec" style="translit"/>
			<var name="price_to" style="query"/>
			<var name="diag" style="query"/>
			<var name="region" style="query"/>
			<var name="updated" style="query"/>
		</request>
		<single item="section_abstract" var="sec" tag="current_section">
			<list item="product" assoc="hierarchy" transit="true" id="product">
				<filter>
					<!--Загрузить товары, которые содержат вложенный айтем цены с ценой не более заданной -->
					<!--В свою очередь этот айтем цены должен принадлежать продавцу с определенным регионом-->
					<child item="price" assoc="seller_price">
						<parameter name="price" sign="&lt;"><var var="price_to"/></parameter>
						<parameter name="time_updated" sign="&gt;"><var var="updated"/></parameter>
						<parsedItem item="seller">
							<parameter name="region"><var var="region"/></parameter>
						</parsedItem>
					</child>
					<parameter name="display_size" sign="&gt;=" ><var var="diag"/></parameter>
				</filter>
			</list>
		</single>
	</page>


	<page name="special" template="section">
		<request>
			<var name="sec"/>
			<var name="price_to" style="query"/>
		</request>
		<list item="product" assoc="hierarchy" transit="true" id="product">
			<!-- Найти товары, которые либо принадлежат определенным разделам, либо имеют скидку больше 2 процентов -->
			<!-- В фильтре также есть и общее для обоих случаев условие - цена должна быть меньше указанной -->
			<filter>
				<parameter name="price" sign="&lt;=" ><var value="{price_to}"/></parameter>
				<option>
					<child item="price" assoc="seller_price">
						<parameter name="discount" sign="&gt;"><var value="2"/></parameter>
					</child>
				</option>
				<option>
					<predecessor sign="NOT IN"><var var="sec"/></predecessor>
				</option>
			</filter>
		</list>
	</page>


	<page name="tv_groups" template="product_groups">
		<list item="tv">
			<!--Если указано направление сортировки, то параметр группировки добавляется в сортировку-->
			<!--Если нет дополнительных параметров группировки (только главный), то сортировка происходит по нему-->
			<aggregation function="MIN" parameter="price">
				<parameter name="size" sign="&gt;=" sort="ASC"><var var="42"/></parameter>
				<parameter name="technology" sort="ASC"/>
			</aggregation>
		</list>
	</page>


	<page name="product" template="product">
		<variables>
			<var name="prod" style="translit"/>
		</variables>
		<single item="product" var="prod">

		</single>
	</page>



	<page name="section_edit" template="section">
		<request>
			<var name="sec" style="translit"/>
		</request>
		<single item="section_abstract" id="section" reference="sec" tag="current_section">
			<!-- Блок инпутов, которые относястя к айтему ref. Если не уканан атрибут name - генерируются все параметры-->
			<!-- атрибут form является ID формы, все блоки инпутов, которые будут содержаться в одной и той же форме, -->
			<!-- должны иметь одинаковые значения этого атрибута. -->
			<parameter-input ref="section" name="name" form="all_products"/>
			<list item="product" assoc="hierarchy" transit="true" id="product">
				<!-- Блок инпутов, которые относястя к айтему ref. Если не задан name, то выводятся все параметры-->
				<parameter-input ref="product" restore-var="message" form="all_products"/>
				<extra-input ref="product" name="popular" restore-var="message" form="all_products"/>
				<link name="show_product" target="product">
					<var name="prod" ref="product" style="translit"/>
				</link>
			</list>
			<!-- Вместо загрузки айтема создает его (без сохранения в БД). В качестве родителя указывается parsedItem-ref -->
			<new item="product" parsedItem-ref="section" id="new_product">
				<parameter-input ref="new_product" restore-var="message"/>
				<extra-input ref="new_product" name="popular" restore-var="message"/>
			</new>
			<ancestor item="section_abstract" assoc="hierarchy" transit="true" tag="breadcrumb"/>
			<list item="section_abstract" assoc="hierarchy" tag="subsection"/>
			<link name="submit_all" target="save_items" type="post"/>
		</single>

	</page>


	<!-- Критический айтем. Если список айтемов с указанным в атрибуте critical-item страничным ID пуст,
		то нужно вернуть 404 ошибку -->
	<page name="product" critical-item="prod">
		<request>
			<var name="prod"/>
		</request>
		<!-- Ссылка на айтем из переменной - var Если var это не ID айетма, а значение параметра, -->
		<!-- то добавляется атрибут parameter с названием параметра -->
		<single item="product" id="prod" var="prod" parameter="art">

		</single>
	</page>
