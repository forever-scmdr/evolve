	<!-- ******************************* Загрузка курсов валют с нацбанка ****************************** -->

	<page name="currency_ajax" template="currency_ajax">
		<variables>
			<var name="url" value="http://www.nbrb.by/Services/XmlExRates.aspx" />
		</variables>
