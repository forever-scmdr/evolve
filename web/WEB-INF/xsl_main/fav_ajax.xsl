<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:f="f:f"	version="2.0">	<xsl:import href="snippets/constants.xsl"/>	<xsl:output method="html" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes"/>	<xsl:variable name="prod" select="page/product"/>	<xsl:template match="/">		<xsl:if test="$prod">			<!-- ссылка в шапке -->			<div class="result header-icons__icon header-icon" id="fav_ajax">				<div class="header-icon__icon"><img src="img/icon-star.png" alt=""/><div class="header-icon__counter"><xsl:value-of select="count($prod)"/></div>				</div>				<div class="header-icon__info"><a href="{page/fav_link}">Избранное</a></div>			</div>			<xsl:for-each select="$prod">				<!-- избранное в списке товаров и на странице товара -->				<div class="result" id="fav_list_{@id}">					<a href="{from_fav}" class="add__item icon-link" ajax="true" ajax-loader-id="fav_list_{@id}">						<div class="icon"><img src="img/icon-star-active.svg" alt="" /></div>						<span><xsl:value-of select="$fav_remove_label"/></span>					</a>				</div>			</xsl:for-each>			<div class="result" id="fav_mobile">				<div class="mobile-icon__icon">					<a href="{page/fav_link}"><img src="img/icon-star.png" alt=""/></a>				</div>				<div class="mobile-icon__qty"><a style="text-decoration: inherit; color: inherit;" href="{page/fav_link}"><xsl:value-of select="count($prod)"/></a></div>				<div class="mobile-icon__label">Избранное</div>				<a class="mobile-icon__link"></a>			</div>		</xsl:if>		<xsl:if test="not($prod)">			<!-- не понятно, где используется -->			<!-- ask -->			<div class="result header-icons__icon header-icon" id="fav_ajax">				<div class="header-icon__icon"><img src="img/icon-star.png" alt=""/>				</div>				<div class="header-icon__info"><a>Избранное</a></div>			</div>			<div class="result" id="fav_mobile">				<div class="mobile-icon__icon">					<img src="img/icon-star.png" alt=""/>				</div>				<div class="mobile-icon__label">Избранное</div>				<a class="mobile-icon__link"></a>			</div>		</xsl:if>		<xsl:if test="page/variables/action = 'removeFav'">			<xsl:for-each select="page/deleted">				<div class="result" id="fav_list_{@id}">					<a href="{to_fav}" ajax="true" ajax-loader-id="fav_list_{@id}"><xsl:value-of select="$fav_add_label"/></a>				</div>			</xsl:for-each>		</xsl:if>	</xsl:template></xsl:stylesheet>