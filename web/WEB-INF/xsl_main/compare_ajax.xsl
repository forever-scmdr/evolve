<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"		xmlns="http://www.w3.org/1999/xhtml"		xmlns:f="f:f"		version="2.0">	<xsl:output method="html" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes"/>	<xsl:variable name="prod" select="page/product"/>	<xsl:template match="/">		<xsl:if test="$prod">			<!-- ссылка в шапке -->			<div class="result" id="compare_ajax">				<a href="{page/compare_link}" class="icon-link" rel="nofollow">					<div class="icon"><img src="img/icon-balance.svg" alt="" /></div>					<span class="icon-link__item">Сравнение (<xsl:value-of select="count($prod)"/>)</span>				</a>			</div>			<xsl:for-each select="$prod">				<!-- ссылка в товаре -->				<div class="result" id="compare_list_{@id}">					<a href="{//page/compare_link}" class="add__item icon-link">						<div class="icon"><img src="img/icon-balance-active.svg" alt="" /></div>						<span>Сравнение</span>					</a>				</div>			</xsl:for-each>		</xsl:if>		<xsl:if test="not($prod)">			<!-- ask -->			<!-- не нашел, где выводится -->			<div class="result" id="compare_ajax">				<a class="icon-link">					<div class="icon"><img src="img/icon-balance.svg" alt="" /></div>					<span class="icon-link__item">Сравнение</span>				</a>			</div>		</xsl:if>	</xsl:template></xsl:stylesheet>