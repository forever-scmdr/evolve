<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"		xmlns:f="f:f"		version="2.0">	<xsl:import href="utils/utils.xsl"/>	<xsl:import href="snippets/constants.xsl"/>	<xsl:output method="html" encoding="UTF-8" media-type="text/xhtml" indent="yes" omit-xml-declaration="yes"/>	<xsl:variable name="code" select="page/variables/code"/>	<xsl:variable name="quot">"</xsl:variable>	<xsl:template match="/">		<div>						<select class="result" id="existing-complectations-{$code}">				<option value="">Новая комплектация</option>				<xsl:for-each select="page/cart/bought">					<option value="{@id}">						<xsl:value-of select="сomplectation_name"/>					</option>				</xsl:for-each>			</select>			<xsl:if test="page/variables/message != ''">				<div id="on-update" class="result">					<a id="open-popup" href="#cmpl_popup" style="display:none;"></a>					<div id="cmpl_popup" class="white-popup mfp-hide">						<h3>							<xsl:value-of select="page/variables/message"/>						</h3>						<ul>							<li>данный список добавлен в корзину</li>							<li>чтобы редактировать список, выбреите его из выпадающего меню "Название комплектации"</li>							<li>чтобы создать новый список, выбреите "Новая комплектация"</li>							<li>Удалить список можно на странице "<a href="/cart">Ваш заказ</a>"</li>						</ul>					</div>				</div>			</xsl:if>			<div id="scripts" class="result">				<script>insertAjax('cart_ajax')</script>				<script>					<xsl:text>var copmlectationOptions = {</xsl:text>						<xsl:for-each select="page/cart/bought">							<xsl:if test="position() != 1">,</xsl:if>							<xsl:value-of select="concat($quot, @id, $quot)"/>:[								<xsl:for-each select="pseudo_option">									<xsl:if test="position() != 1">,</xsl:if>									<xsl:value-of select="concat($quot, 'cb-', code, $quot)"/>								</xsl:for-each>							]						</xsl:for-each>					<xsl:text>}</xsl:text>				</script>				<xsl:if test="page/variables/message != ''">					<script type="text/javascript">						$('#open-popup').magnificPopup({							type: 'inline',							preloader: false,							removalDelay: 300,							closeOnBgClick: false,							closeBtnInside: false,							showCloseBtn: true						});						$(document).ready(function(){							$('#open-popup').trigger("click");							$('#existing-complectations-<xsl:value-of select="$code"/>').val("");							$('#existing-complectations-<xsl:value-of select="$code"/>').trigger("change");						});					</script>				</xsl:if>			</div>		</div>	</xsl:template></xsl:stylesheet>