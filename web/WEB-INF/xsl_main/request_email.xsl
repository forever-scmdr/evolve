<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"	xmlns:xs="http://www.w3.org/2001/XMLSchema"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:f="f:f"	version="2.0">	<xsl:import href="utils/utils.xsl"/>	<xsl:output method="xhtml" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes"/>	<xsl:variable name="contacts" select="page/user[@type = ('user_phys', 'user_jur')]"/>	<xsl:variable name="is_phys" select="$contacts/@type = 'user_phys'"/>	<xsl:variable name="cart" select="if(not(page/tmp_cart)) then page/cart else page/tmp_cart"/>	<xsl:variable name="url_base" select="page/variables/url_base"/>	<xsl:variable name="container" select="if($is_phys) then page/phys else page/jur"/><xsl:template match="/"><html><head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" /></head><body><div class="text-container">	<p style="font-style: italic;">Это письмо отправлено автоматически.</p>	<xsl:value-of select="$container/custom/top" disable-output-escaping="yes"/>	<!-- <xsl:if test="not($is_phys)">		<xsl:value-of select="page/jur/custom/top"/>		<p>Ваша заявка принят. Ожидайте ответ по Персональному заказу и/или Заказным позициям на указанный e-mail</p>	</xsl:if> -->	<h1>Запрос №<xsl:value-of select="page/variables/order_num"/>-Z  от <xsl:value-of select="f:format_date(current-date())"/></h1>	<div class="checkout-cont1">		<div class="info" style="padding-bottom: 20px;">			<xsl:if test="$is_phys">				<p style="margin: 0;">					<span style="font-weight: bold;">Фамилия:</span>&nbsp; <xsl:value-of select="$contacts/second_name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Имя:</span>&nbsp; <xsl:value-of select="$contacts/name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон:</span>&nbsp; <xsl:value-of select="$contacts/phone"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">E-mail:</span>&nbsp; <xsl:value-of select="$contacts/email"/>				</p>				<!-- <xsl:if test="$contacts/need_post_address = 'да'">					<p style="margin: 0;">						<span style="font-weight: bold;">Необходима доставка почтой по адресу:</span>						&nbsp; <xsl:value-of select="$contacts/post_index"/>						&nbsp; <xsl:value-of select="$contacts/post_city"/>						&nbsp; <xsl:value-of select="$contacts/post_address"/>					</p>				</xsl:if> -->				<p style="margin: 0;">					<span style="font-weight: bold;">Дополнительно:</span>&nbsp; <xsl:value-of select="$contacts/comment"/>				</p>				<!-- <p style="margin: 0;">					<span style="font-weight: bold;">Пункт самовывоза:</span>&nbsp; <xsl:value-of select="$contacts/get_order_from"/>				</p> -->			</xsl:if>			<xsl:if test="not($is_phys)">				<p style="margin: 0;">					<span style="font-weight: bold;">Организация:</span>&nbsp; <xsl:value-of select="$contacts/organization"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон/факс:</span>&nbsp; <xsl:value-of select="$contacts/phone"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Электнонный адрес:</span>&nbsp; <xsl:value-of select="$contacts/email"/>				</p>				<p style="margin: 0;">					<span>Отправить договор на этот </span>&nbsp; <xsl:value-of select="$contacts/send_contract_to"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Контактное лицо:</span>&nbsp; <xsl:value-of select="$contacts/contact_name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон контактного лица:</span>&nbsp; <xsl:value-of select="$contacts/contact_phone"/>				</p>				<xsl:if test="$contacts/need_post_address = 'да'">					<p style="margin: 0;">						<span style="font-weight: bold;">Необходима доставка почтой по адресу:</span>						&nbsp; <xsl:value-of select="$contacts/post_index"/>						&nbsp; <xsl:value-of select="$contacts/post_city"/>						&nbsp; <xsl:value-of select="$contacts/post_address"/>					</p>				</xsl:if>				<p style="margin: 0;">					<span style="font-weight: bold;">Юр. адрес:</span>&nbsp; <xsl:value-of select="$contacts/address"/>				</p>				<xsl:if test="not($contacts/no_account = 'да')">					<p style="margin: 0;">						<span style="font-weight: bold;">Расчетный счет:</span>&nbsp; <xsl:value-of select="$contacts/account"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Название банка:</span>&nbsp; <xsl:value-of select="$contacts/bank"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Адрес банка:</span>&nbsp; <xsl:value-of select="$contacts/bank_address"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Код банка:</span>&nbsp; <xsl:value-of select="$contacts/bank_code"/>					</p>				</xsl:if>				<xsl:if test="$contacts/no_account = 'да'">					<p style="margin: 0;">						<span style="font-weight: bold;">Нет расчетного счета</span>					</p>				</xsl:if>				<p style="margin: 0;">					<span style="font-weight: bold;">УНП:</span>&nbsp; <xsl:value-of select="$contacts/unp"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Ф.И.О директора (индивидуального предпринимателя):</span>&nbsp; <xsl:value-of select="$contacts/director"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Действует на основании:</span>&nbsp; <xsl:value-of select="$contacts/base"/> 					<xsl:if test="$contacts/base != 'Устава'">						&nbsp;№ <xsl:value-of select="$contacts/base_number"/> от <xsl:value-of select="$contacts/base_date"/>					</xsl:if>				</p><!--				<p style="margin: 0;">--><!--					<span style="font-weight: bold;">Цель приобретения:</span>&nbsp; <xsl:value-of select="$contacts/jur_aim"/>--><!--				</p>-->				<p style="margin: 0;">					<span style="font-weight: bold;">Источник финансирования:</span>&nbsp; <xsl:value-of select="$contacts/fund"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Дополнительно:</span>&nbsp; <xsl:value-of select="$contacts/comment"/>				</p>			</xsl:if>		</div>				<xsl:if test="false()"><!-- $is_phys -->		<p>-------- &#9986; -------- данные, необходимые для получения заказа: Фамилия, № заказа -------- &#9986; --------</p>		</xsl:if>				<xsl:if test="$cart/bought[qty_zero != '0']">			<h2>Товары из каталога продукции</h2>			<table style="border: 1px solid #555;margin: 40px 0 20px;border-collapse: collapse;vertical-align: top;">				<tr style="border: 1px solid #555;">					<th style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						№					</th>					<th valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Наименование					</th>					<th valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Кол					</th>				</tr>				<xsl:for-each select="$cart/bought[qty_zero != '0']">					<xsl:sort select="product/type"/>					<tr style="border: 1px solid #555;">						<td style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="position()"/>						</td>						<td valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<strong><xsl:value-of select="product/name"/><xsl:text> </xsl:text><xsl:value-of select="product/name_extra"/><xsl:text> </xsl:text>(<xsl:value-of select="product/code"/>)</strong>						</td>						<td valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="qty_zero"/>&nbsp;<xsl:value-of select="product/unit"/>						</td>					</tr>				</xsl:for-each>			</table>		</xsl:if>				<xsl:if test="$cart/custom_bought[nonempty = 'true']">			<h2>Товары по персональному заказу</h2>			<table style="border: 1px solid #555;margin: 40px 0 20px;border-collapse: collapse;vertical-align: top;">				<tr style="border: 1px solid #555;">					<th valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Маркировка					</th>					<th valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Тип прибора					</th>					<th valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Корпус					</th>					<th valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Количество					</th>					<th valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Ссылка					</th>					<th valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">						 Дополнительная информация					</th>				</tr>				<xsl:for-each select="$cart/custom_bought[nonempty = 'true']">					<xsl:sort select="position"/>					<tr style="border: 1px solid #555;">						<td valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<strong><xsl:value-of select="mark"/></strong>						</td>						<td valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="type"/>						</td>						<td valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="case"/>						</td>						<td valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="qty"/>						</td>						<td valign="top" class="line-h" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="link"/>						</td>						<td valign="top" class="price-cel1" style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">							<xsl:value-of select="extra"/>						</td>					</tr>				</xsl:for-each>			</table>		</xsl:if>			</div>	<xsl:value-of select="$container/custom/bottom" disable-output-escaping="yes"/>	<!-- <p>По вопросам, связанным с обработкой персональных заказов обращаться по телефону (017) 316-14-10</p> -->	<xsl:if test="page/variables/also != ''">		<xsl:variable name="also" select="if(page/variables/also = 'self') then '' else page/variables/also"/>		<p>Дополнительно отправлен <strong>Заказ №<xsl:value-of select="$also" /> </strong></p><!-- concat(page/variables/order_num, $also) -->	</xsl:if></div></body></html></xsl:template><xsl:function name="f:format_date">	<xsl:param name="date" as="xs:date"/>	<xsl:sequence select="format-date($date, '[D01].[M01].[Y0001]')"/></xsl:function></xsl:stylesheet>