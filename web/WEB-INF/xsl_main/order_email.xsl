<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"	xmlns:xs="http://www.w3.org/2001/XMLSchema"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:f="f:f"	version="2.0">	<xsl:import href="utils/utils.xsl"/>	<xsl:output method="xhtml" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes"/><xsl:variable name="cart" select="page/cart"/><xsl:variable name="cont" select="page/user[@type = ('user_phys', 'user_jur')]"/><xsl:variable name="contacts" select="$cont[1]"/><xsl:variable name="is_phys" select="$contacts/@type = 'user_phys'"/><xsl:variable name="url_base" select="page/variables/url_base"/><xsl:variable name="is_b" select="true()"/><!-- $contacts/get_order_from and contains($contacts/get_order_from, 'Беды') --><xsl:variable name="need_post" select="$contacts/post_address != ''"/><xsl:variable name="container" select="if($is_phys) then page/phys else page/jur"/><xsl:variable name="top_text">	<xsl:choose>		<xsl:when test="$need_post"><xsl:value-of select="$container/post/top" /></xsl:when>		<xsl:when test="not($is_b)"><xsl:value-of select="$container/post/top" /></xsl:when>		<xsl:when test="$is_b"><xsl:value-of select="$container/bed/top"  /></xsl:when>	</xsl:choose>	<xsl:if test="f:num($cart/custom_quantity) &gt; 0">		<xsl:value-of select="$container/custom/top"  />	</xsl:if></xsl:variable><xsl:variable name="bottom_text">	<xsl:choose>		<xsl:when test="$need_post"><xsl:value-of select="$container/post/bottom" /></xsl:when>		<xsl:when test="$is_b"><xsl:value-of select="$container/bed/bottom" /></xsl:when>		<xsl:when test="not($is_b)"><xsl:value-of select="$container/skr/bottom" /></xsl:when>	</xsl:choose>	<xsl:if test="f:num($cart/custom_quantity) &gt; 0">		<xsl:value-of select="$container/custom/bottom"/>	</xsl:if>		<xsl:if test="page/variables/also != ''">		<p>Дополнительно отправлен <strong>Запрос №<xsl:value-of select="page/variables/order_num" />-Z </strong></p>	</xsl:if></xsl:variable><xsl:template match="/"><html><head><meta http-equiv="Content-Type" content="text/html; charset=utf-8" /></head><body><div class="text-container">		<xsl:value-of select="$top_text" disable-output-escaping="yes"/>	<h1>Заказ №<xsl:value-of select="page/variables/order_num"/> от <xsl:value-of select="f:format_date(current-date())"/></h1>	<div class="item-summ" style="padding-bottom: 20px;">		<xsl:if test="$cart/discount &gt; 0">			Итого, <xsl:value-of select="$cart/currency" />: <xsl:value-of select="f:currency_decimal($cart/simple_sum)"/><br/>			Скидка: <xsl:value-of select="$cart/discount"/>% - на товар не участвующий в спецпредложениях<br/>			Сумма скидки: <xsl:value-of select="f:currency_decimal($cart/margin)"/><br/>		</xsl:if>		Позиций: <xsl:value-of select="count($cart/bought[product/qty != '0'])"/><br/>		Сумма, <xsl:value-of select="$cart/currency" />: <span><xsl:value-of select="f:currency_decimal($cart/sum)"/>		<xsl:if test="matches($contacts/pay_type[1], 'карточк|ЕРИП')"><b> (Онлайн оплата)</b></xsl:if></span>	</div>	<div class="checkout-cont1">		<div class="info" style="padding-bottom: 20px;">			<xsl:if test="$is_phys">				<p style="margin: 0;">					<span style="font-weight: bold;">Фамилия:</span>&nbsp; <xsl:value-of select="$contacts/second_name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Имя:</span>&nbsp; <xsl:value-of select="$contacts/name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон:</span>&nbsp; <xsl:value-of select="$contacts/phone"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">E-mail:</span>&nbsp; <xsl:value-of select="$contacts/email"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Способ доставки:</span>&nbsp; <xsl:value-of select="$contacts/get_order_from"/>				</p>				<xsl:if test="$contacts/post_address != ''">					<p style="margin: 0;">						<span style="font-weight: bold;">Необходима доставка по адресу:</span>						&nbsp; <xsl:value-of select="$contacts/post_index"/>						&nbsp; <xsl:value-of select="$contacts/post_city"/>						&nbsp; <xsl:value-of select="$contacts/post_address"/>					</p>				</xsl:if>				<!-- <xsl:if test="not($contacts/post_address != '')"> -->									<!-- </xsl:if> -->				<p style="margin: 0;">					<span style="font-weight: bold;">Дополнительно:</span>&nbsp; <xsl:value-of select="$contacts/comment"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">В случае отсутствия некоторых позиций:</span>&nbsp; <xsl:value-of select="$contacts/if_absent"/>				</p>							</xsl:if>			<xsl:if test="not($is_phys)">				<p style="margin: 0;">					<span style="font-weight: bold;">Организация:</span>&nbsp; <xsl:value-of select="$contacts/organization"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">УНП:</span>&nbsp; <xsl:value-of select="$contacts/unp"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон/факс:</span>&nbsp; <xsl:value-of select="$contacts/phone"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Электронный адрес:</span>&nbsp; <xsl:value-of select="$contacts/email"/>				</p>				<p style="margin: 0;">					<span>Отправить договор на этот </span>&nbsp; <xsl:value-of select="$contacts/send_contract_to"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Контактное лицо:</span>&nbsp; <xsl:value-of select="$contacts/contact_name"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Телефон контактного лица:</span>&nbsp; <xsl:value-of select="$contacts/contact_phone"/>				</p>				<xsl:if test="$contacts/need_post_address = 'да'">					<p style="margin: 0;">						<span style="font-weight: bold;">Необходима доставка почтой по адресу:</span>						&nbsp; <xsl:value-of select="$contacts/post_index"/>						&nbsp; <xsl:value-of select="$contacts/post_city"/>						&nbsp; <xsl:value-of select="$contacts/post_address"/>					</p>				</xsl:if>				<p style="margin: 0;">					<span style="font-weight: bold;">Юр. адрес:</span>&nbsp; <xsl:value-of select="$contacts/address"/>				</p>				<xsl:if test="not($contacts/no_account = 'да')">					<p style="margin: 0;">						<span style="font-weight: bold;">Расчетный счет:</span>&nbsp; <xsl:value-of select="$contacts/account"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Название банка:</span>&nbsp; <xsl:value-of select="$contacts/bank"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Адрес банка:</span>&nbsp; <xsl:value-of select="$contacts/bank_address"/>					</p>					<p style="margin: 0;">						<span style="font-weight: bold;">Код банка:</span>&nbsp; <xsl:value-of select="$contacts/bank_code"/>					</p>				</xsl:if>				<xsl:if test="$contacts/no_account = 'да'">					<p style="margin: 0;">						<span style="font-weight: bold;">Нет расчетного счета</span>					</p>				</xsl:if>								<p style="margin: 0;">					<span style="font-weight: bold;">Должность руководителя:</span>&nbsp; <xsl:value-of select="$contacts/boss"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Ф.И.О руководителя:</span>&nbsp; <xsl:value-of select="$contacts/director"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Действует на основании:</span>&nbsp; <xsl:value-of select="$contacts/base"/> 					<xsl:if test="$contacts/base != 'Устава'">						&nbsp;№ <xsl:value-of select="$contacts/base_number"/> от <xsl:value-of select="$contacts/base_date"/>					</xsl:if>				</p><!--				<p style="margin: 0;">--><!--					<span style="font-weight: bold;">Цель приобретения:</span>&nbsp; <xsl:value-of select="$contacts/jur_aim"/>--><!--				</p>-->				<p style="margin: 0;">					<span style="font-weight: bold;">Источник финансирования:</span>&nbsp; <xsl:value-of select="$contacts/fund"/>				</p>				<p style="margin: 0;">					<span style="font-weight: bold;">Дополнительно:</span>&nbsp; <xsl:value-of select="$contacts/comment"/>				</p>			</xsl:if>		</div>				<xsl:if test="false()"><!-- $is_phys -->		<p>-------- &#9986; -------- данные, необходимые для получения заказа: Фамилия, № заказа -------- &#9986; --------</p>		</xsl:if>	<table		style="border: 1px solid #555;margin: 40px 0 20px;border-collapse: collapse;vertical-align: top;">		<tr style="border: 1px solid #555;">			<th				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				№			</th>			<th valign="top" class="line-h"				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				Наименование			</th>			<th valign="top" class="price-cel1"				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				Кол			</th>			<th class="price-cel1"				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				Цена, <xsl:value-of select="$cart/currency"/>			</th>			<th class="price-cel1"				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				Стоимость			</th>			<th class="price-cel1"				style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;text-align: left;">				Наличие			</th>			<!-- <th style="border: 1px solid #555;border-collapse: collapse;vertical-align: 				top;padding: 10px;text-align: left;"> -->			<!-- Штрих-код -->			<!-- </th> -->		</tr>		<!-- <xsl:for-each-group select="$cart/bought" group-by="type"> -->		<!-- <tr> -->		<!-- <td colspan="5" style="padding-left: 10px; height: 20px"> -->		<!-- <xsl:value-of select="current-grouping-key()"/> -->		<!-- </td> -->		<!-- </tr> -->		<!-- <xsl:for-each select="$cart/bought[type = current-grouping-key()]"> -->		<xsl:for-each select="$cart/bought[f:num(qty_avail) != 0]">			<xsl:sort select="product/type" />			<tr style="border: 1px solid #555;">				<td					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<xsl:value-of select="position()" />				</td>				<td valign="top" class="line-h"					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<strong>						<xsl:value-of select="concat(product/name, ' ', product/name_extra, ' (', product/code ,')')" />					</strong>				</td>				<td valign="top" class="price-cel1"					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<xsl:value-of select="qty_avail" />&nbsp;					<xsl:value-of select="product/unit" />				</td>				<td class="price-cel1"					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<xsl:if test="sum != ''">						<xsl:variable name="un" select="if(product/unit != '') then product/unit else 'шт'"/>						<xsl:value-of select="concat(f:currency_decimal(price), ' ', $cart/currency, '/', $un)" />						<xsl:if test="product/special_price = 'true'">							<span style="color: #ff0000;"> Спеццена </span>						</xsl:if>					</xsl:if>					<xsl:if test="not(sum)">						-					</xsl:if>				</td>				<td class="price-cel1"					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<xsl:if test="sum != ''">						<xsl:value-of select="concat(f:currency_decimal(sum), ' ', $cart/currency)" />					</xsl:if>					<xsl:if test="not(sum)">						отправлен запрос					</xsl:if>				</td>				<td class="price-cel1"					style="border: 1px solid #555;border-collapse: collapse;vertical-align: top;padding: 10px;">					<span>						<xsl:value-of select="concat(product/qty, ' ', if(product/unit != '') then product/unit else 'шт')" />					</span>				</td>			</tr>		</xsl:for-each>	</table>	</div>	<xsl:value-of select="$bottom_text" disable-output-escaping="yes"/></div></body></html></xsl:template><xsl:function name="f:format_date">	<xsl:param name="date" as="xs:date"/>	<xsl:sequence select="format-date($date, '[D01].[M01].[Y0001]')"/></xsl:function></xsl:stylesheet>