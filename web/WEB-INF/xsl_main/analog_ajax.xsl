<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:f="f:f" version="2.0">	<xsl:output method="html" encoding="UTF-8" media-type="text/xhtml" indent="yes" omit-xml-declaration="yes"/>	<xsl:strip-space elements="*"/>	<xsl:variable name="src" select="page/src"/>	<xsl:template match="/">		<div class="result" id="analog_{page/src/code}">			<div class="popup__body">				<div class="popup__content">					<div class="popup__header">						<div class="popup__title"><xsl:value-of select="concat($src/name, ' ', $src/name_extra)"/> (Код: <xsl:value-of select="$src/code"/>)</div>						<a class="popup__close" href="#">							<img src="img/icon-menu-close.png" alt=""/>						</a>					</div>					<div class="popup__info analogs">						<span style="font-size: 12px; padding-bottom:10px;"><b>Аналогичные товары:</b></span>						<ul class="suggestion__list">							<xsl:for-each select="page/product[position() &lt; 6]">								<li class="suggestion__item"><a href="{show_product}" class="suggestion__link"><xsl:value-of select="concat(name, ' ', name_extra)"/></a>            							&#160;(Код: <xsl:value-of select="code" />) - <xsl:value-of select="concat(qty, unit)"/>       							  </li>							</xsl:for-each>						</ul>							<!-- <table>								<xsl:for-each select="page/product[position() &lt; 6]">									<tr>										<td>											<a href="{show_product}" class="suggestion__link">												<xsl:value-of select="concat(name, ' ', name_extra)"/>											</a>										</td>										<td>(Код: <xsl:value-of select="code" />) - <xsl:value-of select="concat(qty, unit)"/></td>									</tr>								</xsl:for-each>								<xsl:for-each select="page/product[position() &gt; 5]">									<tr class="analog-all" style="display: none;">										<td>											<a href="{show_product}" class="suggestion__link">												<xsl:value-of select="concat(name, ' ', name_extra)"/>											</a>										</td>										<td>(Код: <xsl:value-of select="code" />) - <xsl:value-of select="concat(qty, unit)"/></td>									</tr>								</xsl:for-each>							</table> -->												<xsl:if test="page/product[position() &gt; 5]">							<span class="toggle-all" onclick="$('.analog-all, #analog-more-{$src/code}, #analog-less-{$src/code}').toggle();" id="analog-more-{$src/code}">Показать все</span>							<span class="toggle-all" onclick="$('.analog-all, #analog-more-{$src/code}, #analog-less-{$src/code}').toggle();" id="analog-less-{$src/code}" style="display: none;">Показать первые 5</span>						</xsl:if>					</div>				</div>			</div>		</div>	</xsl:template></xsl:stylesheet>