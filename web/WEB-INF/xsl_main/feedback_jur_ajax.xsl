<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"		xmlns="http://www.w3.org/1999/xhtml"		xmlns:f="f:f"		version="2.0">	<xsl:output method="html" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes" exclude-result-prefixes="#all"/>	<xsl:variable name="message" select="page/variables/message"/>	<xsl:variable name="success" select="page/variables/result = 'success'"/>	<xsl:variable name="form" select="page/generic_form"/>	<xsl:template match="/">		<div class="result" id="modal_popup">			<div class="popup__body">				<div class="popup__content">					<a class="popup__close" href="#">Х</a>					<div class="popup__title title title_2">Напишите нам сообщение</div>					<xsl:if test="$message">						<div class="alert alert_{if ($success) then 'success' else 'danger'}">							<div class="alert__text">								<p><xsl:value-of select="$message"/></p>							</div>						</div>					</xsl:if>					<form action="{page/submit_link}" method="post" ajax="true" ajax-loader-id="modal_popup">						<input class="form__element" type="hidden" name="{$form/input/pseudo/@input}" value="form"/>						<div class="form__item">							<label class="form-label">Название организации:</label>							<input class="form__element" type="text" name="{$form/input/company/@input}" value="{$form/input/company}"/>						</div>						<div class="form__item">							<label class="form-label">Юридический адрес:</label>							<input class="form__element" type="text" name="{$form/input/address/@input}" value="{$form/input/address}"/>						</div>						<div class="form__item">							<label class="form-label">УНП:</label>							<input class="form__element" type="text" name="{$form/input/unp/@input}" value="{$form/input/unp}"/>						</div>						<div class="form__item">							<label class="form-label">ОКПО:</label>							<input class="form__element" type="text" name="{$form/input/okpo/@input}" value="{$form/input/okpo}"/>						</div>						<div class="form__item">							<label class="form-label">Сообщение:</label>							<textarea class="form__element" rows="3"									  name="{$form/input/message/@input}"><xsl:value-of select="$form/input/message"/></textarea>						</div>						<div class="form__proceed">							<input class="button" type="submit" value="Отправить сообщение" />						</div>					</form>				</div>			</div>		</div>	</xsl:template></xsl:stylesheet>