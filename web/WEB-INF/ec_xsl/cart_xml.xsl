<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet 	xmlns:xsl="http://www.w3.org/1999/XSL/Transform" 	xmlns:ext="http://exslt.org/common"	xmlns="http://www.w3.org/1999/xhtml"	version="2.0"	xmlns:f="f:f"	exclude-result-prefixes="xsl ext">	<xsl:output method="xml" encoding="UTF-8" media-type="text/xml" indent="yes" omit-xml-declaration="yes"/>	<xsl:variable name="is_jur" select="not(page/user_jur/input/organization = '')"/>	<xsl:variable name="is_phys" select="not($is_jur)"/>	<xsl:variable name="cart" select="page/cart"/>	<xsl:variable name="contacts" select="if ($is_jur) then page/user_jur/input else page/user_phys/input"/><xsl:template match="/"><xsl:text disable-output-escaping="yes" >&lt;?xml version="1.0" encoding="UTF-8"?&gt;</xsl:text><order num="{$cart/order_num}">	<order_num><xsl:value-of select="$cart/order_num" /></order_num>	<total_qty><xsl:value-of select="count($cart/bought)"/></total_qty>	<sum><xsl:value-of select="$cart/sum"/></sum>	<xsl:if test="$is_phys">		<name><xsl:value-of select="$contacts/name"/></name>		<phone><xsl:value-of select="$contacts/phone"/></phone>		<email><xsl:value-of select="$contacts/email"/></email>		<address><xsl:value-of select="$contacts/address"/></address>		<ship><xsl:value-of select="$contacts/ship_type"/></ship>		<payment><xsl:value-of select="$contacts/pay_type"/></payment>		<comment><xsl:value-of select="$contacts/comment"/></comment>	</xsl:if>	<xsl:if test="not($is_phys)">		<organization><xsl:value-of select="$contacts/organization"/></organization>		<phone><xsl:value-of select="$contacts/phone"/></phone>		<email><xsl:value-of select="$contacts/email"/></email>		<contact><xsl:value-of select="$contacts/contact_name"/></contact>		<contact_phone><xsl:value-of select="$contacts/contact_phone"/></contact_phone>		<ship><xsl:value-of select="$contacts/ship_type"/></ship>		<payment><xsl:value-of select="$contacts/pay_type"/></payment>		<address><xsl:value-of select="$contacts/address"/></address>		<xsl:if test="not($contacts/no_account = 'да')">			<account><xsl:value-of select="$contacts/account"/></account>			<bank><xsl:value-of select="$contacts/bank"/></bank>			<bank_address><xsl:value-of select="$contacts/bank_address"/></bank_address>			<bank_code><xsl:value-of select="$contacts/bank_code"/></bank_code>		</xsl:if>		<xsl:if test="$contacts/no_account = 'да'">			<account>none</account>		</xsl:if>		<unp><xsl:value-of select="$contacts/unp"/></unp>		<director><xsl:value-of select="$contacts/director"/></director>		<base><xsl:value-of select="$contacts/base"/></base>		<comment><xsl:value-of select="$contacts/comment"/></comment>	</xsl:if>	<items>		<xsl:for-each select="$cart/bought">			<xsl:sort select="type"/>			<xsl:variable name="product" select="//page/product[code = current()/code]"/>			<item>				<code><xsl:value-of select="$product/code"/></code>				<name><xsl:value-of select="$product/name"/></name>				<quantity><xsl:value-of select="qty"/></quantity>				<price><xsl:value-of select="$product/price"/></price>				<sum><xsl:value-of select="sum"/></sum>			</item>		</xsl:for-each>	</items></order></xsl:template></xsl:stylesheet>