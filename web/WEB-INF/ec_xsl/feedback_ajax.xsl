<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"		xmlns="http://www.w3.org/1999/xhtml"		xmlns:f="f:f"		version="2.0">	<xsl:output method="html" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes" exclude-result-prefixes="#all"/>	<xsl:variable name="message" select="page/variables/message"/>	<xsl:variable name="success" select="page/variables/result = 'success'"/>	<xsl:variable name="form" select="page/feedback_form"/>	<xsl:template match="/">		<div class="respond result" id="modal-feedback" ajax-href="{page/feedback_form_link}" show-loader="yes">			<xsl:if test="$message">				<div id="tmpdiv" style="padding: 1rem 2rem; border: 1px solid {if($success) then 'rgb(86, 196, 147)' else 'red'}; background: {if($success) then 'rgb(215, 243, 230)' else 'rgba(255,0,0,.15)'};">					<xsl:value-of select="$message"/>					<script type="text/javascript">						setTimeout(function () {						var element = document. getElementById("tmpdiv");						element. parentNode. removeChild(element);						},7500);					</script>				</div>			</xsl:if>			<h3 class="h2">Написать сообщение</h3>			<form action="{page/submit_link}" method="post" ajax="true" ajax-loader-id="modal-feedback">				<fieldset>					<div class="form-field">						<input name="{$form/input/name/@input}" value="{$form/input/name}" type="text" class="full-width" placeholder="Ваше имя"/>					</div>					<div class="form-field">						<input type="text" name="{$form/input/email/@input}" value="{$form/input/email}" class="full-width" placeholder="Email"/>					</div>					<div class="message form-field">						<textarea class="full-width" name="{$form/input/message/@input}" placeholder="Сообщение">							<xsl:value-of select="$form/input/message"/>						</textarea>					</div>				</fieldset>				<input type="submit" class="submit btn--primary btn--large full-width" value="Отправить"/>			</form>		</div>	</xsl:template>	<xsl:template name="FEEDBACK_FORM">		<div class="respond" id="modal-feedback" ajax-href="{page/feedback_form_link}" show-loader="yes"></div>	</xsl:template></xsl:stylesheet>