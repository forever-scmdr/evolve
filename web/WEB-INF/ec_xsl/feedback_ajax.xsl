<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE stylesheet [<!ENTITY nbsp "&#160;"><!ENTITY copy "&#x000A9;" >]><xsl:stylesheet		xmlns:xsl="http://www.w3.org/1999/XSL/Transform"		xmlns="http://www.w3.org/1999/xhtml"		xmlns:f="f:f"		version="2.0">	<xsl:output method="html" encoding="UTF-8" media-type="text/html" indent="yes" omit-xml-declaration="yes" exclude-result-prefixes="#all"/>	<xsl:variable name="message" select="page/variables/message"/>	<xsl:variable name="success" select="page/variables/result = 'success'"/>	<xsl:variable name="form" select="page/feedback_form"/>	<xsl:template match="/">		<div id="feedback-form-container" class="result">						<xsl:if test="$message">				<p style="{if($success) then 'color : green;' else 'color : red'}">					<xsl:value-of select="$message"/>				</p>			</xsl:if>			<form id="feedback" action="{page/submit_link}" method="post" ajax="true" ajax-loader-id="feedback" class="feedback-form">					 <div class="feedback-form__item">						<div class="feedback-form__label">Ð¢itle<span>*</span></div>						<div class="feedback-form__element">							<select name="{$form/input/status/@input}">							  <option value="Mr.">Mr.</option>							  <option value="Mrs.">Mrs.</option>							  <option value="Ms.">Ms.</option>							  <option value="Dr.">Dr.</option>							</select>						</div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Name<span>*</span></div>						<div class="feedback-form__element"><input name="{$form/input/name/@input}" value="{$form/input/name}" type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Surname<span>*</span></div>						<div class="feedback-form__element"><input name="{$form/input/surname/@input}" value="{$form/input/surname}" type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Email<span>*</span></div>						<div class="feedback-form__element"><input name="{$form/input/email/@input}" value="{$form/input/email}" type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Phone Number</div>						<div class="feedback-form__element"><input name="{$form/input/phone/@input}" value="{$form/input/phone}" type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Nationality</div>						<div class="feedback-form__element"><input name="{$form/input/nationality/@input}" value="{$form/input/nationality}" type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Country of Stay</div>						<div class="feedback-form__element"><input name="{$form/input/country/@input}" value="{$form/input/country}"  type="text" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Subject<span>*</span></div>						<div class="feedback-form__element"><input name="topic" /></div>					 </div>					 <div class="feedback-form__item">						<div class="feedback-form__label">Message<span>*</span></div>						<div class="feedback-form__element"><textarea name="{$form/input/message/@input}" value="{$form/input/message}"  id="" cols="30" rows="10"></textarea></div>					 </div>					 <input type="submit" value="submit"/>				  </form>		</div>	</xsl:template>	<xsl:template name="FEEDBACK_FORM">		<div id="feedback-form-container" ajax-href="{page/feedback_form_link}" show-loader="no">					</div>	</xsl:template></xsl:stylesheet>