<?xml version="1.0" encoding="UTF-8"?>       
<site>

	<!-- ******************************* Включение для разделов каталога ****************************** -->
	<include-definition name="COMMON">
		<single item="catalog" id="catalog_main" cacheable="false">
			<tree item="section" id="sec">
				<link name="show_section" target="sub">
					<var name="sec" ref="sec" style="translit"/>
				</link>
				<link name="show_products" target="section" type="exclusive">
					<var name="sec" ref="sec" style="translit"/>
				</link>
			</tree>d
		</single>

		<single item="custom_pages" id="custom_pages" cacheable="true" >
			<tree item="custom_page" id="custom_page" tag="menu_custom">
				<link name="show_page" target="page" type="exclusive">
					<var name="p" ref="custom_page" style="translit"/>
				</link>
			</tree>
		</single>

		<list item="news" id="news" cacheable="true">
			<link name="show_page" target="news" type="exclusive">
				<var name="sel" ref="news" style="translit"/>
			</link>
		</list>
		<single item="common" cacheable="false"/>
		<link name="index_link" target="index"/>
		<link name="catalog_link" target="catalog"/>
		<link name="contacts_link" target="contacts"/>
		<link name="cart_ajax_link" target="cart_ajax"/>
		<link name="cart_link" target="cart"/>
		<link name="search_link" target="search"/>
		<link name="feedback_form_link" target="feedback_ajax"/>
		<link name="fav_ajax_link" target="fav_ajax"/>
		<link name="compare_ajax_link" target="compare_ajax"/>
		<single item="modules">
			<list item="named_code"/>
		</single>
		<single item="url_seo_wrap">
			<list item="url_seo"/>
		</single>
	</include-definition>


	<page name="index" template="index" cacheable="true">
		<request>
			<var name="sec" value="78418"/>
			<var name="page" value="1"/>
			<var name="view" value="table" scope="cookie"/>
			<var name="limit" value="48" scope="cookie"/>
			<var name="sort" scope="cookie"/>
			<var name="direction" value="ASC" scope="cookie"/>
			<var name="fil"/>
			<var name="tag"/>
		</request>		
		<single item="main_page" cacheable="true">
			<list item="main_promo_bottom"/>
			<list item="main_slider_frame"/>
			<single item="seo"/>
		</single>
		<single item="news_wrap">
			<list item="news_item" id="ni" transit="true">
				<filter>
					<sorting direction="DESC">
						<var value="date"/>
					</sorting>
					<limit>
						<var value="4"/>
					</limit>
				</filter>
				<link name="show_news_item" target="news_item" type="exclusive">
					<var name="ni" ref="ni" style="translit"/>
				</link>
			</list>
		</single>
		<list item="section" var="sec" id="cur_sec" tag="current_section">
			<list item="product" id="prod" transit="true">
			<filter>
					<sorting direction-var="direction">
						<var var="sort"/>
					</sorting>
					<limit>
						<var var="limit"/>
					</limit>
					<pages>
						<var var="page"/>
					</pages>
				</filter>
				<link name="show_product" target="product">
					<var name="prod" ref="prod" style="translit"/>
				</link>
				<link name="to_cart" target="cart_action">
					<var name="action" value="addToCart"/>
					<var name="code" ref="prod" parameter="code"/>
				</link>
				<link name="to_fav" target="cookie_list_action">
					<var name="update_cookie_name" value="favourites"/>
					<var name="update_cookie_value" ref="prod" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="fav_ajax"/>
				</link>
				<link name="to_compare" target="cookie_list_action">
					<var name="update_cookie_name" value="compare"/>
					<var name="update_cookie_value" ref="prod" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="compare_ajax"/>
				</link>
				<single item="params"/>
			</list>
		</list>
		<include name="COMMON"/>
	</page>


	<page name="catalog" template="catalog" cacheable="true">
		<include name="COMMON"/>
		<single item="catalog">
			<single item="seo"/>
		</single>
	</page>


	<page name="section" template="section" cacheable="true" critical-item="cur_sec">
		<request>
			<var name="sec" style="translit"/>
			<var name="page" value="1"/>
			<var name="view" value="table" scope="cookie"/>
			<var name="limit" value="48" scope="cookie"/>
			<var name="sort" scope="cookie"/>
			<var name="direction" value="ASC" scope="cookie"/>
			<var name="fil"/>
			<var name="tag"/>
		</request>
		<single item="section" var="sec" id="cur_sec" tag="current_section" cache-vars="sec">
			<single item="seo"/>
			<list item="product" id="prod" transit="true">
			<filter>
					<child item="params" transit="false"
						   ref="cur_sec" parameter="params_filter" var="fil" preload-domains="yes"/>
					<sorting direction-var="direction">
						<var var="sort"/>
					</sorting>
					<limit>
						<var var="limit"/>
					</limit>
					<pages>
						<var var="page"/>
					</pages>
					<link name="filter_base_link" target="section">
						<var name="sec" var="sec" style="translit"/>
					</link>
					<parameter name="tag" sign="=" compare="ANY">
						<var var="tag"/>
					</parameter>
				</filter>
				<link name="show_product" target="product">
					<var name="prod" ref="prod" style="translit"/>
				</link>
				<link name="to_cart" target="cart_action">
					<var name="action" value="addToCart"/>
					<var name="code" ref="prod" parameter="code"/>
				</link>
				<link name="to_fav" target="cookie_list_action">
					<var name="update_cookie_name" value="favourites"/>
					<var name="update_cookie_value" ref="prod" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="fav_ajax"/>
				</link>
				<link name="to_compare" target="cookie_list_action">
					<var name="update_cookie_name" value="compare"/>
					<var name="update_cookie_value" ref="prod" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="compare_ajax"/>
				</link>
				<single item="params"/>
			</list>
			<list item="product" tag="tag" id="tag">
				<aggregation parameter="tag"/>
				<link name="canonical" type="exclusive" target="section" copy-page-vars="no">
					<var name="sec" style="translit" var="sec"/>
					<var name="tag" parameter="tag" ref="tag"/>
				</link>
			</list>
			<list item="product" tag="min">
				<aggregation parameter="price" function="MIN"/>
			</list>
			<list item="product" tag="max">
				<aggregation parameter="price" function="MAX"/>
			</list>
		</single>
		<link name="set_view_table" target="section" copy-page-vars="yes" type="exclusive">
			<var name="view" value="table"/>
		</link>
		<link name="set_view_list" target="section" copy-page-vars="yes" type="exclusive">
			<var name="view" value="list"/>
		</link>
		<link name="set_limit_48" target="section" copy-page-vars="yes" type="exclusive">
			<var name="limit" value="48"/>
		</link>
		<link name="set_limit_96" target="section" copy-page-vars="yes" type="exclusive">
			<var name="limit" value="96"/>
		</link>
		<link name="set_limit_144" target="section" copy-page-vars="yes" type="exclusive">
			<var name="limit" value="144"/>
		</link>
		<link name="reset_filter_link" target="section">
			<var name="sec" var="sec" style="translit"/>
		</link>
		<link name="show_only_available" target="section" type="exclusive">
			<var name="sec" var="sec" style="translit"/>
			<var name="minqty" value="0"/>
		</link>
		<link name="show_all" target="section" type="exclusive">
			<var name="sec" var="sec" style="translit"/>
			<var name="minqty" value=""/>
		</link>
		<link name="set_sort_name_asc" target="section" copy-page-vars="yes" type="exclusive">
			<var name="sort" value="name"/>
			<var name="direction" value="ASC"/>
		</link>
		<link name="set_sort_name_desc" target="section" copy-page-vars="yes" type="exclusive">
			<var name="sort" value="name"/>
			<var name="direction" value="DESC"/>
		</link>
		<link name="set_sort_price_asc" target="section" copy-page-vars="yes" type="exclusive">
			<var name="sort" value="price"/>
			<var name="direction" value="ASC"/>
		</link>
		<link name="set_sort_price_desc" target="section" copy-page-vars="yes" type="exclusive">
			<var name="sort" value="price"/>
			<var name="direction" value="DESC"/>
		</link>
		<link name="set_sort_default" target="section" copy-page-vars="yes" type="exclusive">
			<var name="sort" value=""/>
		</link>
		<include name="COMMON"/>
	</page>


	<page name="sub" template="sub" cacheable="false" critical-item="cur_sec">
		<request>
			<var name="sec" style="translit"/>
			<var name="view" value="table" scope="cookie"/>
			<var name="fil"/>
		</request>
		<single item="section" var="sec" id="cur_sec" cacheable="false" cache-vars="sec" tag="current_section">
			<single item="seo"/>
			<list item="section" id="subsec">
					<filter>
					<child item="params" transit="false"
						   ref="cur_sec" parameter="params_filter" var="fil" preload-domains="yes"/>
					<link name="filter_base_link" target="sub">
						<var name="sec" var="sec" style="translit"/>
					</link>
					</filter>
				<link name="show_products" target="section" >
					<var name="sec" ref="subsec" style="translit"/>
				</link>
				<list item="product"/>
				<single item="params"/>
			</list>
			<list item="product" transit="false" id="prod">
				<filter>
					<child item="params" transit="false"
						   ref="cur_sec" parameter="params_filter" var="fil" preload-domains="yes"/>
				</filter>
				<link name="show_product" target="product">
					<var name="prod" ref="prod" style="translit"/>
				</link>
			</list>
		</single>
		<link name="set_view_table" target="sub" copy-page-vars="yes" >
			<var name="view" value="table"/>
		</link>
		<link name="set_view_list" target="sub" copy-page-vars="yes" >
			<var name="view" value="list"/>
		</link>
		<include name="COMMON"/>
	</page>

	<page name="search" template="search">
		<request>
			<var name="q"/>
			<var name="view" value="table" scope="cookie"/>
		</request>
		<list item="product" id="prod">
			<filter>
				<fulltext limit="48" compare="EVERY">
					<var var="q"/>
				</fulltext>
			</filter>
			<link name="show_product" target="product">
				<var name="prod" ref="prod" style="translit"/>
			</link>
			<link name="to_cart" target="cart_action">
				<var name="action" value="addToCart"/>
				<var name="code" ref="prod" parameter="code"/>
			</link>
			<link name="to_fav" target="cookie_list_action">
				<var name="update_cookie_name" value="favourites"/>
				<var name="update_cookie_value" ref="prod" parameter="code"/>
				<var name="action" value="add"/>
				<var name="src_page" value="fav_ajax"/>
			</link>
			<link name="to_compare" target="cookie_list_action">
				<var name="update_cookie_name" value="compare"/>
				<var name="update_cookie_value" ref="prod" parameter="code"/>
				<var name="action" value="add"/>
				<var name="src_page" value="compare_ajax"/>
			</link>
			<single item="params"/>
		</list>
		<link name="set_view_table" target="search" copy-page-vars="yes">
			<var name="view" value="table"/>
		</link>
		<link name="set_view_list" target="search" copy-page-vars="yes">
			<var name="view" value="list"/>
		</link>
		<link name="show_only_available" target="search">
			<var name="q" var="q"/>
			<var name="minqty" value="0"/>
		</link>
		<link name="show_all" target="search">
			<var name="q" var="q"/>
			<var name="minqty" value=""/>
		</link>
		<include name="COMMON"/>
	</page>


	<page name="product" template="product" cacheable="true" critical-item="prod">
		<request>
			<var name="prod" style="translit"/>
		</request>
		<single item="product" id="prod" var="prod">
			<single item="seo"/>
			<single item="params"/>
			<ancestor item="section" transit="false" tag="product_section">
				<list item="product" tag="assoc" id="assoc1">
					<filter>
						<parameter name="code" sign="&lt;" compare="SOME">
							<var ref="prod" parameter="code"/>
						</parameter>
						<limit>
							<var value="4"/>
						</limit>
					</filter>
					<link name="show_product" target="product">
							<var name="prod" ref="assoc1" style="translit"/>
						</link>
						<link name="to_cart" target="cart_action">
							<var name="action" value="addToCart"/>
							<var name="code" ref="assoc1" parameter="code"/>
						</link>
						<link name="to_fav" target="cookie_list_action">
							<var name="update_cookie_name" value="favourites"/>
							<var name="update_cookie_value" ref="assoc1" parameter="code"/>
							<var name="action" value="add"/>
							<var name="src_page" value="fav_ajax"/>
						</link>
						<link name="to_compare" target="cookie_list_action">
							<var name="update_cookie_name" value="compare"/>
							<var name="update_cookie_value" ref="assoc1" parameter="code"/>
							<var name="action" value="add"/>
							<var name="src_page" value="compare_ajax"/>
						</link>
						<single item="params"/>
				</list>
				<list item="product" tag="assoc" id="assoc2">
					<filter>
						<parameter name="code" sign="&gt;" compare="SOME">
							<var ref="prod" parameter="code"/>
						</parameter>
						<limit>
							<var value="4"/>
						</limit>
					</filter>
					<link name="show_product" target="product">
							<var name="prod" ref="assoc2" style="translit"/>
						</link>
						<link name="to_cart" target="cart_action">
							<var name="action" value="addToCart"/>
							<var name="code" ref="assoc2" parameter="code"/>
						</link>
						<link name="to_fav" target="cookie_list_action">
							<var name="update_cookie_name" value="favourites"/>
							<var name="update_cookie_value" ref="assoc2" parameter="code"/>
							<var name="action" value="add"/>
							<var name="src_page" value="fav_ajax"/>
						</link>
						<link name="to_compare" target="cookie_list_action">
							<var name="update_cookie_name" value="compare"/>
							<var name="update_cookie_value" ref="assoc2" parameter="code"/>
							<var name="action" value="add"/>
							<var name="src_page" value="compare_ajax"/>
						</link>
						<single item="params"/>
				</list>
			</ancestor>
			<link name="to_cart" target="cart_action">
				<var name="action" value="addToCart"/>
				<var name="code" ref="prod" parameter="code"/>
			</link>
			<link name="to_fav" target="cookie_list_action">
				<var name="update_cookie_name" value="favourites"/>
				<var name="update_cookie_value" ref="prod" parameter="code"/>
				<var name="action" value="add"/>
				<var name="src_page" value="fav_ajax"/>
			</link>
			<link name="to_compare" target="cookie_list_action">
				<var name="update_cookie_name" value="compare"/>
				<var name="update_cookie_value" ref="prod" parameter="code"/>
				<var name="action" value="add"/>
				<var name="src_page" value="compare_ajax"/>
			</link>
			<list item="product" assoc="other_colors" id="other_colors">
				<link name="show_product" target="product">
					<var name="prod" ref="other_colors" style="translit"/>
				</link>
				<link name="to_cart" target="cart_action">
					<var name="action" value="addToCart"/>
					<var name="code" ref="other_colors" parameter="code"/>
				</link>
				<link name="to_fav" target="cookie_list_action">
					<var name="update_cookie_name" value="favourites"/>
					<var name="update_cookie_value" ref="other_colors" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="fav_ajax"/>
				</link>
				<link name="to_compare" target="cookie_list_action">
					<var name="update_cookie_name" value="compare"/>
					<var name="update_cookie_value" ref="other_colors" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="compare_ajax"/>
				</link>
				<single item="params"/>
			</list>
		</single>
		<list item="product" tag="assoc" id="assoc">
			<filter>
				<parameter name="code" sign="=" compare="SOME"><var ref="prod" parameter="assoc_code"/></parameter>
			</filter>
			<link name="show_product" target="product">
					<var name="prod" ref="assoc" style="translit"/>
				</link>
				<link name="to_cart" target="cart_action">
					<var name="action" value="addToCart"/>
					<var name="code" ref="assoc" parameter="code"/>
				</link>
				<link name="to_fav" target="cookie_list_action">
					<var name="update_cookie_name" value="favourites"/>
					<var name="update_cookie_value" ref="assoc" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="fav_ajax"/>
				</link>
				<link name="to_compare" target="cookie_list_action">
					<var name="update_cookie_name" value="compare"/>
					<var name="update_cookie_value" ref="assoc" parameter="code"/>
					<var name="action" value="add"/>
					<var name="src_page" value="compare_ajax"/>
				</link>
				<single item="params"/>
		</list>
		
		<include name="COMMON"/>
	</page>


	<page name="news" template="news" cacheable="true">
		<request>
			<var name="sel" style="translit"/>
			<var name="p" value="1"/>
		</request>
		<single item="news" var="sel" tag="selected_news">
			<single item="seo"/>
			<list item="news_item" id="ni">
				<filter>
					<sorting direction="DESC">
						<var value="date"/>
					</sorting>
					<limit>
						<var value="12"/>
					</limit>
					<pages>
						<var var="p"/>
