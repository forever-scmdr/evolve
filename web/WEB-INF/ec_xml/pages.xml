	<page name="informers_ajax" template="informers_ajax" cacheable="true">
		<request>
			<var name="ticker"/>
			<var name="limit" value="5"/>
			<var name="tickers_per_request" value="5"/>
			<var name="page" value="1"/>
		</request>
		<single item="informer_wrap" var="ticker">
			<list item="informer">
				<filter>
					<limit>
						<var var="limit"/>
					</limit>
					<pages>
						<var name="page" var="page"/>
					</pages>
				</filter>
			</list>
		</single>
		<link name="base_link" copy-page-vars="no" target="informers_ajax">
			<var name="ticker" var="ticker"/>
		</link>
	</page>

	<page name="index" template="index" cacheable="true">
