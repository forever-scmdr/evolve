	<page name="news_item" template="news_item" cacheable="true">
		<request>
			<var name="ni" style="translit"/>
		</request>
		<single item="news_item" var="ni" cacheable="true" cache-vars="ni">
			<single item="seo"/>
			<ancestor item="news"/>
