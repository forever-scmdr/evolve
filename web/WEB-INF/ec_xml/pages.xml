			<list item="informer_wrap" id="inf">
				<link name="informers_ajax_link" target="informers_ajax">
					<var name="ticker" ref="inf"/>
				</link>
			</list>
		</single>
		<single item="news_wrap">
			<list item="news_item" id="ni" transit="true">
				<filter>
					<parameter name="hash" sign="!=" compare="SOME">
						<var ref="featured" parameter="hash"/>
					</parameter>
					<sorting direction="DESC">
						<var value="date"/>
					</sorting>
					<limit>
						<var var="limit"/>
					</limit>
