	<page name="i-sec" template="i_sec" cacheable="true" cache-vars="m_sec sec">
		<variables>
			<var name="m_sec" style="translit" />
			<var name="sec" style="translit" />
			<var name="tag" />
		</variables>
		<!-- <item name="section" id="sec" reference-var="sec" />
 -->
		<item name="section" id="sec" reference-var="sec" >
			<item name="seo">
				<item name="meta"/>
			</item>
		</item>
		<item name="filter_seo">
			<item name="url_seo">
				<item name="meta"/>
			</item>
		</item>

		<item name="main_section" id="sms" reference-var="m_sec">
			<item name="seo">
				<item name="meta"/>
			</item>
			<link name="show_section" target="i-sec">
				<var name="m_sec" item="sms" style="translit" />
			</link>
			<successor name="product" id="prod">
				<filter>
					<parameter name="tag" compare="ALL">
						<var var="tag" />
						<var item="sec" parameter="filter_tag" />
					</parameter>
				</filter>
				<link name="show_product" target="i-prod">
					<var name="prod" item="prod" style="translit" />
					<var name="sec" item="sec" />
				</link>
			</successor>
			<successor name="product" id="tags" tag="section_tag">
				<aggregation parameter="tag" />
				<filter>
					<parameter name="tag" compare="ALL">
						<var item="sec" parameter="filter_tag" />
					</parameter>
				</filter>
			</successor>
		</item>
		<link name="base_link" target="sec">
			<var name="m_sec" var="m_sec" style="translit" />
			<var name="sec" var="sec" style="translit" />
		</link>
		<include name="IFRAME_LINKS" />
	</page>


	<page name="i-new_products" template="i_sec" cacheable="true" cache-vars="m_sec sec">
		<item name="product" id="prod">
			<filter>
