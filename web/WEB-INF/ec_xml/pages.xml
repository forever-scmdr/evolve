	<!-- Каталоги товаров, услуг и аренды со всеми разделами -->

	<include-definition name="COMMON_AND_LINKS" cacheable="true">
		<link name="index_link" target="index" />
		<link name="about_link" target="about" />
		<item name="about" cacheable="true">
			<item name="abstract_page" id="page">
				<link name="show_page" target="about">
					<var name="p" item="page" style="translit" />
				</link>
				<item name="page_part">
					<item name="picture_pair" />
				</item>
			</item>
		</item>
		<link name="rooms_link" target="rooms" />
		<item name="services" id="services">
			<item name="service" id="service" tag="service">
				<link name="show_page" target="service">
					<var name="sel" style="translit" item="service" />
				</link>
				<link name="show_pages" target="services">
					<var name="sel" style="translit" item="service" />
				</link>
				<item name="service" id="service2" tag="service">
					<link name="show_page" target="service">
						<var name="sel" style="translit" item="service2" />
					</link>
					<link name="show_pages" target="services">
						<var name="sel" style="translit" item="service2" />
					</link>
				</item>
			</item>
			<item name="file_list">
				<item name="file" />
			</item>
			<item name="page_part">
				<item name="picture_pair" />
			</item>
		</item>
		<item name="booking" cacheable="true" tag="booking_text"/>
		<link name="news_link" target="news" />
		<link name="book_link" target="book" />
		<link name="contacts_link" target="contacts" />
		<item name="common" cacheable="true" />
		<link name="currency_link" target="currency_ajax" />
		<link name="search_link" target="search" />
		<link name="client_feedback_link" target="feedback_form" />
		<link name="message_link" target="message_form" />
		<link name="callback_link" target="callback_form" />
		<link name="room_search_link" target="room_search"/>
		<link name="enter_pin" target="order"/>
	</include-definition>




<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- ////////////////////                                                                ////////////////////////////// -->
<!-- ////////////////////                        СТРАНИЦЫ САЙТА	          	             ////////////////////////////// -->
<!-- ////////////////////                                                                ////////////////////////////// -->
<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->




	<!-- ******************************* Главная страница ****************************** -->

	<page name="search" template="search" cacheable="true">
		<include name="COMMON_AND_LINKS" />
		<variables>
			<var name="query" />
		</variables>
	</page>


	<page name="index" template="index" cacheable="false">
		<item name="main" cacheable="true">
			<item name="frame" />
			<item name="mp_part">
				<item name="mp_row">
					<item name="mp_block"/>
				</item>
				<item name="mp_number"/>
			</item>
		</item>
		<item name="news_item" id="news_main" cacheable="true">
			<filter>
				<sorting direction="DESC">
					<var value="date" />
				</sorting>
				<limit>
					<var value="4" />
				</limit>
			</filter>
			<link name="show_news_item" target="news_item">
				<var name="ni" item="news_main" style="translit" />
			</link>
		</item>
		<include name="COMMON_AND_LINKS" />
	</page>

	<!-- ******************************* Новости ****************************** -->

	<page name="news" template="news" cacheable="true">
		<variables>
			<var name="page" value="1" />
		</variables>
		<include name="COMMON_AND_LINKS" />
		<item name="news">
			<item name="news_item" id="news_item">
				<link name="show_news_item" target="news_item">
					<var name="ni" item="news_item" style="translit" />
				</link>
				<filter>
					<sorting direction="DESC">
						<var value="date" />
					</sorting>
					<limit>
						<var value="12" />
					</limit>
					<pages>
						<var name="page" var="page" />
					</pages>
				</filter>
			</item>
		</item>
	</page>

	<!-- ******************************* Новость ****************************** -->

	<page name="news_item" template="news_item" cacheable="true">
		<variables>
			<var name="ni" style="translit" />
		</variables>
		<include name="COMMON_AND_LINKS" />
		<item name="news_item" reference-var="ni" tag="sn" cacheable="true" cache-vars="ni" >
			<item name="page_part">
				<item name="picture_pair"/>
			</item>
		</item>
	</page>

	<!-- ******************************* О компании ****************************** -->

	<page name="about" template="about" cacheable="true">
		<variables>
			<var name="p" style="translit" />
		</variables>
		<item name="abstract_page" reference-var="p" tag="info" cacheable="true" cache-vars="p">
			<item name="page_part">
				<item name="picture_pair"/>
			</item>
		</item>
		<item name="feedback">
			<filter>
				<sorting direction="DESC">
					<var value="date" />
				</sorting>
				<parameter name="show" sign="=" compare="SOME">
					<var value="1" />
				</parameter>
			</filter>
		</item>
		<include name="COMMON_AND_LINKS" />
	</page>

	<!-- ******************************* Комнаты ****************************** -->

	<page name="rooms" template="rooms" cacheable="true">
		<variables>
			<var name="r" style="translit" />
			<var name="message" />
			<var name="result" />
		</variables>
		<include name="COMMON_AND_LINKS" />
		<item name="rooms" cacheable="true" id="rooms_rooms">
			<item name="room" id="room">
				<link name="show_room" target="rooms">
					<var name="r" item="room" style="translit" />
				</link>
				<link name="feedback_link" target="feedback_form">
					<var name="rn" item="room" />
				</link>
				<item name="picture_pair" />
				<item name="feedback">
					<filter>
						<sorting direction="DESC">
							<var value="date" />
						</sorting>
						<parameter name="show" sign="=" compare="SOME">
							<var value="1" />
						</parameter>
					</filter>
				</item>
			</item>
			<item name="page_part">
				<item name="picture_pair" />
			</item>
		</item>
	</page>

	<!-- ******************************* Услуги ****************************** -->

	<page name="services" template="services" cacheable="true">
		<variables>
			<var name="sel" style="translit" />
		</variables>
		<include name="COMMON_AND_LINKS" />
	</page>

	<!-- ******************************* Одна услуга ****************************** -->

	<page name="service" template="services" cacheable="true" cache-vars="sel">
		<variables>
			<var name="sel" style="translit" />
			<var name="message"/>
			<var name="error"/>
			<var name="nocache"/>
		</variables>
		<item name="service" reference-var="sel" tag="info" cacheable="true" cache-vars="sel nocache">
			<item name="page_part">
				<item name="picture_pair"/>
			</item>
			<item name="module"/>
			<form item-name="wellness_form" id="well_form" restore-var="error">
				<link name="submit" target="submit_wellness_form">
					<var name="sel" var="sel" style="translit"/>
				</link>
			</form>
		</item>
		<include name="COMMON_AND_LINKS" />
	</page>

	<!-- ******************************* Форма отзыва ****************************** -->

	<page name="stom_form" template="stom_form" cacheable="true" cache-vars="message">
		<variables>
			<var name="rn" />
			<var name="result" />
			<var name="message" />
		</variables>
		<form item-name="stom_form" restore-var="message" tag="form">
			<link name="submit_link" target="process_stom" >
				<var name="topic" value="Заявка на стоматологические услуги"/>
			</link>
		</form>
	</page>



	<!-- ******************************* Форма отзыва ****************************** -->

	<page name="feedback_form" template="feedback_form" cacheable="true" cache-vars="message">
		<variables>
			<var name="rn" />
			<var name="result" />
			<var name="message" />
		</variables>
		<form item-name="feedback" restore-var="message" tag="form">
			<link name="submit_link" target="process_client_feedback" />
		</form>
	</page>

	<!-- ******************************* Форма отправки сообщения ****************************** -->

	<page name="message_form" template="message_form" cacheable="true" cache-vars="message">
		<variables>
			<var name="result" />
			<var name="message" />
		</variables>
		<form item-name="feedback_form" restore-var="message" tag="form">
			<link name="submit_link" target="process_feedback" />
		</form>
	</page>

	<!-- ******************************* Форма отправки обратного звонка ****************************** -->

	<page name="callback_form" template="callback_form" cacheable="true" cache-vars="message">
		<variables>
			<var name="result" />
			<var name="message" />
		</variables>
		<form item-name="feedback_form" restore-var="message" tag="form">
			<link name="submit_link" target="process_callback" />
		</form>
	</page>

	<!-- ******************************* Анкета ****************************** -->
	<page name="quest_form" template="quest_form" cacheable="true" cache-vars="message">
		<variables>
			<var name="result" />
			<var name="message" />
		</variables>
		<form item-name="questionnaire" restore-var="message" tag="form">
			<link name="submit_link" target="process_quest" />
		</form>
	</page>

	<page name="quest" template="quest">
		<include name="COMMON_AND_LINKS" />
	</page>

	<page name="quest_email" template="quest_email">
		<session>
			<item name="questionnaire"/>
		</session>
	</page>


	<!-- ******************************* Заказ ****************************** -->

	<page name="book" template="book" cacheable="false">
		<variables>
			<var name="rest_type" value="san"/>
			<var name="pay_type" value="bel"/>
		</variables>
		<item name="rooms" cacheable="true" id="rooms_book">
			<item name="room" id="room">
				<link name="show_photos" target="pictures_ajax">
					<var name="r" item="room" style="translit" />
				</link>
				<item name="picture_pair" />
			</item>
			<item name="page_part">
				<item name="picture_pair" />
			</item>
		</item>
		<include name="COMMON_AND_LINKS" />
		<item name="book" cacheable="true">
			<item name="book_type" />
			<item name="page_part">
				<item name="picture_pair" />
			</item>
		</item>
		<link name="bel_san" target="book" />
		<link name="ru_san" target="book">
			<var name="pay_type" value="rus"/>
		</link>
		<link name="eur_san" target="book">
			<var name="pay_type" value="eur"/>
		</link>
		
		<link name="bel_ozd" target="book">
			<var name="rest_type" value="ozd"/>
		</link>
		<link name="ru_ozd" target="book">
			<var name="rest_type" value="ozd"/>
			<var name="pay_type" value="rus"/>
		</link>
		<link name="eur_ozd" target="book">
			<var name="rest_type" value="ozd"/>
			<var name="pay_type" value="eur"/>
		</link>
		
	</page>
	
	<page name="pictures_ajax" cacheable="true" template="pictures_ajax">
		<variables>
			<var name="r" style="translit" />
		</variables>
		<item name="room" reference-var="r" id="room">
			<item name="picture_pair" />
			<link name="show_room" target="rooms">
				<var name="r" item="room" style="translit" />
			</link>
		</item>
	</page>

	<!-- ******************************* Контакты ****************************** -->

	<page name="contacts" template="contacts" cacheable="true">
		<include name="COMMON_AND_LINKS" />
		<item name="contacts" cacheable="true" />
	</page>
	


