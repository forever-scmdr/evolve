	<page name="i-prod" template="i_prod" cacheable="true" cache-vars="prod">
		<variables>
			<var name="prod" style="translit" />
			<var name="sec" />
		</variables>
		<item name="product" id="prod" reference-var="prod">
			<predecessors-of name="main_section" id="pr_ms">
				<link name="show_section" target="i-sec">
					<var name="m_sec" item="pr_ms" style="translit" />
				</link>
			</predecessors-of>
			<link name="get_doc_link" target="get_doc">
				<var name="mark" item="prod" parameter="name" />
			</link>
		</item>
		<item name="section" id="sec" reference-var="sec">
			<link name="show_section" target="i-sec">
				<var name="m_sec" item="pr_ms" style="translit" />
				<var name="sec" item="sec" />
			</link>
		</item>
		<item name="doc" reference-item="prod" reference-parameter="doc_assoc" />
		<item name="doc">
			<filter>
				<parameter name="scope" sign="like" compare="SOME" pattern="%v%">
					<var item="sec" parameter="name" />
				</parameter>
			</filter>
		</item>
		<item name="doc">
			<filter>
				<parameter name="scope" sign="like" compare="SOME" pattern="%v%">
					<var item="pr_ms" parameter="name" />
				</parameter>
			</filter>
		</item>
		<include name="IFRAME_LINKS" />
	</page>
