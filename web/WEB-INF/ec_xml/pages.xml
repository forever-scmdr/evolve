	<page name="news_item" template="news_item" cacheable="true">
		<headers X-Frame-Options="ALLOWALL" Access-Control-Allow-Origin="*" />
		<request>
			<var name="ni" style="translit"/>
		</request>
		<single item="overused" id="overused"/>
		<single item="news_item" var="ni" id="ni" >
			<single item="seo"/>
			<single item="top_gal"/>
			<!-- <single item="comments" id="comment">
				<tree item="comment"/>
				<link name="comment_link" target="comment_ajax">
					<var name="id" ref="comment"/>
					<var name="big_id" ref="comment"/>
				</link>
			</single> -->
			<list item="page_part">
				<list item="news_item" id="rec_ni" assoc="news">
					<link name="show_page" target="news_item" type="exclusive">
						<var name="sel" ref="rec_ni" style="translit"/>
					</link>
				</list>
				<list item="small_news_item" id="rec_sni" assoc="news">
					<link name="show_page" target="small_news_item" type="exclusive">
						<var name="sel" ref="rec_sni" style="translit"/>
					</link>
				</list>
			</list>
			<ancestor item="news" transit="false"/>
			<ancestor item="news_wrap" id="parent" transit="true" tag="news">
				<list item="news_item" tag="prev" id="prev" cacheable="false" cache-vars="ni" transit="true">
					<filter>
						<limit>
							<var value="1"/>
						</limit>
						<parameter name="date" sign="&lt;" compare="SOME">
							<var ref="ni" parameter="date"/>
						</parameter>
						<sorting direction="DESC">
							<var value="date"/>
						</sorting>
					</filter>
					<link target="news_item" name="show_page" type="exclusive">
						<var name="ni" style="translit" ref="prev"/>
					</link>
				</list>
				<list item="news_item" tag="next" id="next" cacheable="false" cache-vars="ni" transit="true" >
					<filter>
						<limit>
							<var value="1"/>
						</limit>
						<parameter name="date" sign="&gt;" compare="SOME">
							<var ref="ni" parameter="date"/>
						</parameter>
						<sorting direction="ASC">
							<var value="date"/>
						</sorting>
					</filter>
					<link target="news_item" name="show_page" type="exclusive">
						<var name="ni" style="translit" ref="next"/>
					</link>
				</list>
				<list item="news_item" transit="true" cacheable="false" id="also">
					<filter>
						<parameter name="tag" sign="!=" compare="SOME">
							<var ref="overused" parameter="tag"/>
						</parameter>
						<parameter name="tag" sign="=" compare="SOME">
							<var ref="ni" parameter="tag"/>
						</parameter>
						<parameter name="name" sign="!=" compare="SOME">
							<var ref="ni" parameter="name"/>
						</parameter>
						<sorting direction="DESC">
							<var value="date"/>
						</sorting>
						<limit>
							<var value="6"/>
						</limit>
					</filter>
					<link target="news_item" name="show_page" type="exclusive">
						<var name="ni" style="translit" ref="also"/>
					</link>
				</list>
			</ancestor>
		</single>

